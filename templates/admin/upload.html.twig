{% extends 'base.html.twig' %}

{% block title %}Anforderungen importieren{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="h3 mb-4">Anforderungen importieren</h1>

        {# Tabs einbinden #}
        {% include 'admin/_tabs.html.twig' with {'activeTab': activeTab} %}

        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">CSV Upload (DOSB Anforderungen)</h6>
            </div>
            <div class="card-body">
                
                {% if message %}
                    <div class="alert alert-success">{{ message }}</div>
                {% endif %}
                
                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}

                <form method="post" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="csvFile" class="form-label">CSV-Datei ausw√§hlen</label>
                        <input class="form-control" type="file" id="csvFile" name="csvFile" required accept=".csv">
                        <div class="form-text">
                            Bitte die offizielle CSV-Export-Datei verwenden.
                            Format: Jahr, AlterMin, AlterMax, Geschlecht, ...
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-upload"></i> Import starten
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}