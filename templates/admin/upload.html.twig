{% extends "base.html.twig" %}

{% block page_title %}
    {{ 'Sportabzeichen – Anforderungen hochladen'|trans }}
{% endblock %}

{% block page_content %}
<div class="content">
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'requirements'} %}

    {% if message %}
        <div class="alert alert-success">{{ message|raw }}</div>
    {% endif %}
    {% if error %}
        <div class="alert alert-danger">{{ error|raw }}</div>
    {% endif %}

    <form method="post" enctype="multipart/form-data" class="mt-3">
        <div class="mb-3">
            <label for="jahr">Jahr:</label>
            <input type="text" name="jahr" id="jahr" class="form-control" placeholder="z. B. 2025" required>
        </div>
        <div class="mb-3">
            <label for="csvFile">CSV-Datei auswählen:</label>
            <input type="file" name="csvFile" id="csvFile" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Upload & Import starten</button>
    </form>
</div>
{% endblock %}
