{% extends "base.html.twig" %}

{% block title %}Teilnehmerdaten hochladen{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="h3 mb-4">Teilnehmerdaten importieren</h1>

    {% include 'admin/_tabs.html.twig' with {'activeTab': 'import'} %}

    {# Erfolgsmeldung #}z
    {% if message %}
        <div class="alert alert-success alert-dismissible fade show">
            <strong>Erfolg!</strong> {{ message }}<br>
            <span class="badge bg-success">{{ imported|default(0) }} importiert</span>
            {% if skipped is defined and skipped > 0 %}
                <span class="badge bg-warning text-dark">{{ skipped }} 端bersprungen</span>
            {% endif %}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endif %}

    {# Fehlermeldung Allgemein #}
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    {# NEU: Detailliertes Fehlerprotokoll #}
    {% if detailedErrors is defined and detailedErrors is not empty %}
        <div class="alert alert-warning">
            <h4 class="alert-heading">Probleme beim Import ({{ skipped }} Zeilen 端bersprungen):</h4>
            <div style="max-height: 300px; overflow-y: auto;">
                <ul class="mb-0">
                    {% for err in detailedErrors %}
                        <li>{{ err }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    {% endif %}

    <div class="card mt-4 shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">CSV-Upload</h6>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                
                <div class="mb-4">
                    <label class="form-label fw-bold">Import-Strategie:</label>
                    
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="strategy" id="strat_import" value="import_id" checked>
                        <label class="form-check-label" for="strat_import">
                            Identifikation 端ber <strong>Import-ID</strong>
                        </label>
                        <div class="form-text text-muted">
                            Format: <code>Software-ID; Geschlecht; Geburtsdatum</code>
                        </div>
                    </div>

                    <div class="form-check mt-2">
                        <input class="form-check-input" type="radio" name="strategy" id="strat_act" value="act">
                        <label class="form-check-label" for="strat_act">
                            Identifikation 端ber <strong>IServ-Account</strong>
                        </label>
                        <div class="form-text text-muted">
                            Format: <code>max.mustermann; Geschlecht; Geburtsdatum</code>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="csvFile" class="form-label">CSV-Datei</label>
                    <input type="file" name="csvFile" id="csvFile" class="form-control" accept=".csv" required>
                </div>

                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-file-import"></i> Hochladen
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}