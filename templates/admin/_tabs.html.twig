{# Definition der Tabs #}
{% set tabs = [
    { id: 'dashboard', route: 'sportabzeichen_admin_dashboard', icon: 'fa-home', label: 'Ãœbersicht' },
    { id: 'participants_manage', route: 'sportabzeichen_admin_participants_index', icon: 'fa-users', label: 'Teilnehmer' },
    { id: 'import', route: 'sportabzeichen_admin_upload_participants', icon: 'fa-file-upload', label: 'Import Teilnehmer' },
    { id: 'requirements_upload', route: 'sportabzeichen_admin_upload', icon: 'fa-list-alt', label: 'Anforderungen' }
] %}

<div class="mb-4">
    <ul class="nav nav-tabs">
        {% for tab in tabs %}
            <li class="nav-item">
                <a class="nav-link {{ activeTab == tab.id ? 'active' : '' }}" 
                   href="{{ path(tab.route) }}">
                   {# Wir nutzen hier direkt das FontAwesome Tag #}
                   <i class="fas {{ tab.icon }}"></i> {{ tab.label }}
                </a>
            </li>
        {% endfor %}
    </ul>
</div>