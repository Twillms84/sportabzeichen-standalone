{% extends 'base.html.twig' %}

{% block title %}Prüfungsübersicht{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {# Hier binden wir deine dashboard_css.css ein #}
    <link rel="stylesheet" href="{{ asset('styles/dashboard_css.css') }}">
    <style>
        /* Falls die Medaillen-Styles noch nicht in deiner CSS sind: */
        .medal-circle {
            width: 35px; height: 35px; border-radius: 50%;
            display: flex; align-items: center; justify-content: center;
            font-weight: bold; color: white; font-size: 0.9rem;
        }
        .bg-gold { background: linear-gradient(45deg, #FFD700, #DAA520); }
        .bg-silver { background: linear-gradient(45deg, #C0C0C0, #808080); }
        .bg-bronze { background: linear-gradient(45deg, #CD7F32, #8B4513); }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid" data-controller="admin-participant">
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'exams'} %}

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Prüfungs-Cockpit</h2>
            <p class="text-muted">Verwaltung aller Prüfungen und Statistiken</p>
        </div>
        <a href="#" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Neue Prüfung
        </a>
    </div>

    <div class="row g-4">
        {% for item in examsData %}
            {% set exam = item.exam %}
            {% set stats = item.stats %}
            
            <div class="col-12 col-md-6 col-xxl-4">
                <div class="card h-100 shadow-sm border-0 exam-card">
                    <div class="card-header bg-transparent border-0 pt-3 pb-0 d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge bg-secondary mb-1">{{ exam.year }}</span>
                            <h5 class="card-title fw-bold mb-0 text-truncate" style="max-width: 200px;">{{ exam.name }}</h5>
                            <small class="text-muted"><i class="bi bi-calendar-event"></i> {{ exam.date|date('d.m.Y') }}</small>
                        </div>
                        
                        <div class="dropdown">
                            <button class="btn btn-light btn-sm rounded-circle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li><a class="dropdown-item" href="{{ path('admin_exam_show', {'id': exam.id}) }}">Details</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    {# Falls die Route admin_exam_delete nicht existiert, hier anpassen oder '#' nutzen #}
                                    {% set delete_url = '#' %}
                                    {% try %}
                                        {% set delete_url = path('admin_exam_delete', {'id': exam.id}) %}
                                    {% catch %}
                                        {# Route existiert nicht -> Button deaktivieren oder Fallback #}
                                    {% endtry %}

                                    <form action="{{ delete_url }}" method="POST" class="d-none">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
                                    </form>
                                    <a class="dropdown-item text-danger" href="#" 
                                       data-action="click->admin-participant#confirmAction"
                                       data-confirm-message="Prüfung wirklich löschen?"
                                       data-confirm-type="danger">
                                        Löschen
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label x-small fw-bold text-muted text-uppercase">Prüfer</label>
                            <select class="form-select form-select-sm js-change-examiner" data-exam-id="{{ exam.id }}">
                                <option value="">-- Nicht zugewiesen --</option>
                                {% for examiner in examiners %}
                                    <option value="{{ examiner.id }}" {{ exam.examiner and exam.examiner.id == examiner.id ? 'selected' : '' }}>
                                        {{ examiner.lastname }}, {{ examiner.firstname }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {% if stats.unassigned > 0 %}
                            <div class="alert alert-warning py-2 small border-0">
                                <strong>{{ stats.unassigned }}</strong> Teilnehmer ohne Gruppe
                            </div>
                        {% endif %}

                        <div class="row text-center mt-3">
                            <div class="col-4 border-end">
                                <div class="medal-circle bg-gold mx-auto mb-1">{{ stats.gold }}</div>
                                <span class="x-small text-muted text-uppercase">Gold</span>
                            </div>
                            <div class="col-4 border-end">
                                <div class="medal-circle bg-silver mx-auto mb-1">{{ stats.silver }}</div>
                                <span class="x-small text-muted text-uppercase">Silber</span>
                            </div>
                            <div class="col-4">
                                <div class="medal-circle bg-bronze mx-auto mb-1">{{ stats.bronze }}</div>
                                <span class="x-small text-muted text-uppercase">Bronze</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-white border-top-0 py-3 d-flex justify-content-between">
                        <small class="text-muted">{{ exam.examParticipants|length }} Teilnehmer</small>
                        <a href="{{ path('admin_exam_show', {'id': exam.id}) }}" class="btn btn-sm btn-outline-primary px-3 rounded-pill">Verwalten</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('controllers/exam-overview.js') }}"></script>
{% endblock %}