{% extends 'base.html.twig' %}

{% block title %}Prüfungsübersicht{% endblock %}

{% block body %}
<div class="container-fluid p-4">

    {# Header Bereich #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Prüfungs-Cockpit</h2>
            <p class="text-muted">Verwaltung aller Prüfungen und Statistiken</p>
        </div>
        {# Hier Link anpassen, falls du eine Route zum Erstellen hast #}
        <a href="#" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Neue Prüfung
        </a>
    </div>

    {# Cards Grid #}
    <div class="row g-4">
        {% for item in examsData %}
            {% set exam = item.exam %}
            {% set stats = item.stats %}
            
            <div class="col-12 col-md-6 col-xxl-4">
                <div class="card h-100 shadow-sm border-0 exam-card">
                    
                    {# CARD HEADER #}
                    <div class="card-header bg-transparent border-0 pt-3 pb-0 d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge bg-secondary mb-1">{{ exam.year }}</span>
                            <h5 class="card-title fw-bold mb-0 text-truncate" title="{{ exam.name }}">
                                {{ exam.name }}
                            </h5>
                            <small class="text-muted">
                                <i class="bi bi-calendar-event"></i> {{ exam.date|date('d.m.Y') }}
                            </small>
                        </div>
                        
                        {# Dropdown Menü für Aktionen #}
                        <div class="dropdown">
                            <button class="btn btn-light btn-sm rounded-circle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="{{ path('admin_exam_overview', {'id': exam.id}) }}">Details öffnen</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="#">Löschen</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-body">
                        
                        {# PRÜFER SELECT #}
                        <div class="mb-3">
                            <label class="form-label text-uppercase text-muted x-small fw-bold">Verantwortlicher Prüfer</label>
                            <select class="form-select form-select-sm js-change-examiner" data-exam-id="{{ exam.id }}">
                                <option value="">-- Nicht zugewiesen --</option>
                                {% for examiner in examiners %}
                                    <option value="{{ examiner.id }}" {{ exam.examiner and exam.examiner.id == examiner.id ? 'selected' : '' }}>
                                        {{ examiner.lastname }}, {{ examiner.firstname }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {# ALERT: NICHT ZUGEORDNETE TEILNEHMER #}
                        {% if stats.unassigned > 0 %}
                            <div class="alert alert-warning py-2 px-3 d-flex align-items-center mb-3 small" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2 fs-5"></i>
                                <div class="lh-1">
                                    <strong>{{ stats.unassigned }} Teilnehmer</strong><br>
                                    ohne Klasse/Gruppe
                                </div>
                            </div>
                        {% endif %}

                        <hr class="opacity-10 my-3">

                        {# MEDAILLEN #}
                        <div class="row text-center mb-3">
                            <div class="col-4 border-end">
                                <div class="medal-circle bg-gold mx-auto mb-1">{{ stats.gold }}</div>
                                <span class="x-small text-muted text-uppercase">Gold</span>
                            </div>
                            <div class="col-4 border-end">
                                <div class="medal-circle bg-silver mx-auto mb-1">{{ stats.silver }}</div>
                                <span class="x-small text-muted text-uppercase">Silber</span>
                            </div>
                            <div class="col-4">
                                <div class="medal-circle bg-bronze mx-auto mb-1">{{ stats.bronze }}</div>
                                <span class="x-small text-muted text-uppercase">Bronze</span>
                            </div>
                        </div>

                    </div>
                    
                    {# FOOTER #}
                    <div class="card-footer bg-white border-top py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                <i class="bi bi-people-fill"></i> {{ exam.examParticipants|length }} Teilnehmer
                            </small>
                            <a href="{{ path('app_exam_show', {'id': exam.id}) }}" class="btn btn-sm btn-outline-primary">
                                Verwalten <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam-overview.js') }}"></script>
{% endblock %}