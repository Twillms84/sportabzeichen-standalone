{% extends 'base.html.twig' %}

{% block title %}Prüfungsübersicht{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/dashboard_css.css') }}">
{% endblock %}

{% block body %}
<div class="container-fluid" data-controller="exam-overview">
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'exams'} %}

    <div class="d-flex justify-content-between align-items-center mb-4 mt-2">
        <div>
            <h2 class="fw-bold mb-0">Prüfungs-Cockpit</h2>
            <p class="text-muted">Verwaltung aller Prüfungen und Statistiken</p>
        </div>
        {# MODAL TRIGGER #}
        <button type="button" class="btn btn-primary shadow-sm" data-bs-toggle="modal" data-bs-target="#newExamModal">
            <i class="bi bi-plus-lg"></i> Neue Prüfung
        </button>
    </div>

    <div class="row g-4">
        {% for item in examsData %}
            {% set exam = item.exam %}
            {% set stats = item.stats %}
            
            <div class="col-12 col-md-6 col-xxl-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header pt-3 pb-2 d-flex justify-content-between align-items-start">
                        <div>
                            <span class="badge bg-white text-dark mb-1">{{ exam.year }}</span>
                            <h5 class="card-title fw-bold mb-0 text-truncate" style="max-width: 200px;">{{ exam.name }}</h5>
                            <small class="text-muted"><i class="bi bi-calendar-event"></i> {{ exam.date|date('d.m.Y') }}</small>
                        </div>
                        
                        <div class="dropdown">
                            <button class="btn btn-link text-white p-0" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-three-dots-vertical fs-5"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                                <li>
                                    <a class="dropdown-item" href="{{ path('admin_exam_show', {'id': exam.id}) }}">
                                        <i class="bi bi-eye me-2"></i> Details
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <div class="delete-action-container">
                                        <form action="{{ path('admin_exam_delete', {'id': exam.id}) }}" method="POST" class="d-none">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
                                        </form>
                                        <a class="dropdown-item text-danger d-flex align-items-center" href="#" 
                                           data-action="click->exam-overview#confirmDelete"
                                           data-confirm-message="Möchtest du die Prüfung '{{ exam.name }}' wirklich löschen?">
                                            <i class="bi bi-trash3 me-2"></i> Löschen
                                        </a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="mb-3">
                            <label class="form-label x-small fw-bold text-muted text-uppercase">Verantwortlicher Prüfer</label>
                            <select class="form-select form-select-sm js-change-examiner" 
                                    data-exam-id="{{ exam.id }}"
                                    data-action="change->exam-overview#changeExaminer">
                                <option value="">-- Nicht zugewiesen --</option>
                                {% for examiner in examiners %}
                                    <option value="{{ examiner.id }}" {{ exam.examiner and exam.examiner.id == examiner.id ? 'selected' : '' }}>
                                        {{ examiner.lastname }}, {{ examiner.firstname }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>

                        {% if stats.unassigned > 0 %}
                            <div class="alert alert-warning py-2 small border-0 d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <span><strong>{{ stats.unassigned }}</strong> ohne Gruppe</span>
                            </div>
                        {% endif %}

                        <div class="row text-center mt-3 g-0">
                            <div class="col-4 border-end">
                                <div class="medal-circle bg-gold mx-auto mb-1">{{ stats.gold }}</div>
                                <span class="x-small text-muted text-uppercase fw-bold">Gold</span>
                            </div>
                            <div class="col-4 border-end">
                                <div class="medal-circle bg-silver mx-auto mb-1">{{ stats.silver }}</div>
                                <span class="x-small text-muted text-uppercase fw-bold">Silber</span>
                            </div>
                            <div class="col-4">
                                <div class="medal-circle bg-bronze mx-auto mb-1">{{ stats.bronze }}</div>
                                <span class="x-small text-muted text-uppercase fw-bold">Bronze</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer border-top py-3 d-flex justify-content-between align-items-center">
                        <small class="text-muted"><i class="bi bi-people"></i> {{ exam.examParticipants|length }} TN</small>
                        <a href="{{ path('admin_exam_show', {'id': exam.id}) }}" class="btn btn-sm btn-outline-secondary px-3">
                            Verwalten <i class="bi bi-arrow-right ms-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    {# MODAL FÜR NEUE PRÜFUNG #}
    <div class="modal fade" id="newExamModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content shadow border-0">
                <div class="modal-header text-white" style="background-color: var(--osa-green, #198754);">
                    <h5 class="modal-title fw-bold">Neue Prüfung anlegen</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="{{ path('admin_exam_new') }}" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Name der Prüfung</label>
                            <input type="text" name="name" class="form-control" placeholder="z.B. Winterprüfung {{ "now"|date("Y") }}" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Jahr</label>
                                <input type="number" name="year" class="form-control" value="{{ "now"|date("Y") }}" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">Datum</label>
                                <input type="date" name="date" class="form-control" value="{{ "now"|date("Y-m-d") }}" required>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer bg-light">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Abbrechen</button>
                        <button type="submit" class="btn btn-primary px-4">Erstellen</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}