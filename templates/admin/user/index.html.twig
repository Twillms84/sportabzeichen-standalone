{% extends 'base.html.twig' %}

{% block title %}Prüferverwaltung{% endblock %}

{% block body %}
<div class="container mt-4">

    {# --- 1. NAVIGATION TABS --- #}
    {% set activeTab = 'users' %}
    
    {# Tab-Definition (inkl. Rollen-Check für Anforderungen) #}
    {% set tabs = [
        { id: 'dashboard', route: 'admin_dashboard', icon: 'fa-home', label: 'Übersicht' },
        { id: 'users', route: 'admin_user_index', icon: 'fa-user-tie', label: 'Prüfer & User' }, 
        { id: 'participants_manage', route: 'admin_participants_index', icon: 'fa-users', label: 'Teilnehmer' },
        { id: 'import', route: 'admin_participants_upload', icon: 'fa-file-upload', label: 'Import Teilnehmer' },
        { 
            id: 'requirements', 
            route: 'admin_requirements_upload', 
            icon: 'fa-list-alt', 
            label: 'Anforderungen', 
            role: 'ROLE_SUPER_ADMIN' 
        }
    ] %}

    <div class="mb-4">
        <ul class="nav nav-tabs">
            {% for tab in tabs %}
                {# Zeige Tab nur, wenn keine Rolle definiert ist ODER der User die Rolle hat #}
                {% if tab.role is not defined or is_granted(tab.role) %}
                    <li class="nav-item">
                        <a class="nav-link {{ activeTab == tab.id ? 'active' : '' }}" 
                           href="{{ path(tab.route) }}">
                            <i class="fas {{ tab.icon }} me-1"></i> {{ tab.label }}
                        </a>
                    </li>
                {% endif %}
            {% endfor %}
        </ul>
    </div>

    {# --- 2. HEADER & ACTION --- #}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="h3 mb-0">Verwaltung: PrüferInnen</h2>
            <p class="text-muted small mb-0">Übersicht aller registrierten Benutzer und Prüfer.</p>
        </div>
        <a href="{{ path('admin_user_new') }}" class="btn btn-success shadow-sm">
            <i class="fas fa-plus-circle me-1"></i> Neu anlegen
        </a>
    </div>

    {# --- 3. TABELLE --- #}
    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-body-tertiary">
                        <tr>
                            <th class="ps-4 py-3">Name / Vorname</th>
                            <th class="py-3">Login (E-Mail)</th>
                            <th class="py-3">Rolle</th>
                            <th class="py-3">Prüfer-Nr.</th>
                            <th class="text-end pe-4 py-3">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td class="ps-4 fw-bold">
                                {{ user.lastname }}, {{ user.firstname }}
                            </td>
                            <td>
                                <a href="mailto:{{ user.email }}" class="text-decoration-none">
                                    {{ user.email }}
                                </a>
                            </td>
                            <td>
                                {# Hier unterscheiden wir die Badges #}
                                {% if 'ROLE_SUPER_ADMIN' in user.roles %}
                                    <span class="badge bg-dark border border-light">Super Admin</span>
                                {% elseif 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">Admin</span>
                                {% elseif 'ROLE_EXAMINER' in user.roles %}
                                    <span class="badge bg-success">Prüfer</span>
                                {% else %}
                                    <span class="badge bg-secondary">User</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.examinerId %}
                                    <span class="font-monospace text-muted">{{ user.examinerId }}</span>
                                {% else %}
                                    <span class="text-muted small">-</span>
                                {% endif %}
                            </td>
                            <td class="text-end pe-4">
                                <a href="{{ path('admin_user_edit', {'id': user.id}) }}" 
                                   class="btn btn-sm btn-outline-primary"
                                   title="Bearbeiten">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-user-slash fa-3x mb-3 text-secondary opacity-50"></i><br>
                                Es wurden noch keine PrüferInnen angelegt.
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-body-tertiary text-muted small text-end">
            Gesamt: {{ users|length }} Einträge
        </div>
    </div>
</div>
{% endblock %}