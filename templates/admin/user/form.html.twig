{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-user-edit me-2"></i> {{ title }}</h5>
                    <a href="{{ path('admin_user_index') }}" class="btn btn-sm btn-light text-primary">
                        <i class="fas fa-arrow-left"></i> Zur√ºck
                    </a>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        
                        {# Namen #}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.firstname) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_row(form.lastname) }}
                            </div>
                        </div>

                        {# HIER IST DAS NEUE ROLLEN-FELD #}
                        <div class="mb-3">
                            {{ form_row(form.roles) }}
                        </div>

                        {# Login & Nummer #}
                        <div class="mb-3">
                            {{ form_row(form.email) }}
                        </div>
                        <div class="mb-3">
                            {{ form_row(form.examinerId) }}
                        </div>

                        <hr class="my-4">

                        {# Passwort Box #}
                        <div class="bg-body-tertiary p-3 rounded mb-3 border">
                            <div class="d-flex align-items-center mb-2">
                                <i class="fas fa-key me-2"></i> <strong>Sicherheit</strong>
                            </div>
                            {{ form_row(form.plainPassword) }}
                        </div>

                        <div class="d-grid">
                            <button class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Speichern
                            </button>
                        </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}