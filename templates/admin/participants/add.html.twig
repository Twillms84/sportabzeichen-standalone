{% extends 'base.html.twig' %}

{% block title %}Teilnehmer hinzuf체gen{% endblock %}

{% block body %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-person-check-fill me-2"></i>IServ-Benutzer als Teilnehmer aktivieren</h5>
            <a href="{{ path('admin_participants_missing') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Zur체ck zur Suche
            </a>
        </div>

        <div class="card-body">
            
            {# Anzeige der ausgew채hlten Benutzerdaten #}
            <div class="alert alert-info d-flex align-items-center mb-4">
                <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                <div>
                    <strong>Ausgew채hlter Benutzer:</strong> {{ user.firstname }} {{ user.lastname }}<br>
                    <span class="small">
                        Benutzername: <code>{{ user.username }}</code> | 
                        Gruppen: 
                        {% for group in user.groups %}
                            <span class="badge bg-secondary">{{ group.name }}</span>
                        {% else %}
                            <span class="text-muted fst-italic">Keine Gruppen</span>
                        {% endfor %}
                    </span>
                </div>
            </div>

            {# Das Formular aus dem Controller rendern #}
            {{ form_start(form) }}
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.birthdate) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_row(form.gender) }}
                    </div>
                </div>

                <hr class="mt-4 mb-4">

                <div class="d-flex justify-content-between">
                    <a href="{{ path('admin_participants_missing') }}" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Abbrechen
                    </a>
                    {# Der Speichern-Button kommt direkt aus dem Formular-Builder #}
                    {{ form_row(form.save) }}
                </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}