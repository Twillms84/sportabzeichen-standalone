{# templates/admin/participants/qr_print.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ 'QR-Codes Druckansicht'|trans }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; }
        }
        .qr-card {
            border: 2px dashed #ccc;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            break-inside: avoid;
        }
        .qr-code img {
            max-width: 200px;
            height: auto;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
            <h1>{{ 'Login QR-Codes'|trans }}</h1>
            <button onclick="window.print()" class="btn btn-primary btn-lg">
                <i class="bi bi-printer"></i> {{ 'Jetzt drucken'|trans }}
            </button>
        </div>

        <div class="row">
            {% for participant in participants %}
                <div class="col-md-6">
                    <div class="qr-card bg-white shadow-sm">
                        <h2 class="h4 mb-1">{{ participant.user.firstname }} {{ participant.user.lastname }}</h2>
                        <p class="text-muted mb-3">{{ participant.user.groups|first ? participant.user.groups|first.name : '' }}</p>
                        
                        <div class="qr-code mb-3">
                            {# Hier wird der QR-Code gerendert. 
                               Stelle sicher, dass 'qr_code_data_uri' (Endroid QR Bundle) installiert ist 
                               oder dein Controller eine URL zum Code liefert #}
                            <img src="{{ qr_codes[participant.id] }}" alt="QR Login">
                        </div>

                        <div class="small text-secondary">
                            {{ 'Scannen zum Einloggen'|trans }}<br>
                            <strong>{{ app.request.getSchemeAndHttpHost() }}</strong>
                        </div>
                    </div>
                </div>
                
                {# Alle 6 Karten ein Seitenumbruch beim Drucken #}
                {% if loop.index % 6 == 0 %}
                    <div class="page-break"></div>
                {% endif %}
            {% else %}
                <div class="alert alert-info no-print">
                    {{ 'Keine Teilnehmer mit verf√ºgbarem Login-Token gefunden.'|trans }}
                </div>
            {% endfor %}
        </div>
    </div>

</body>
</html>