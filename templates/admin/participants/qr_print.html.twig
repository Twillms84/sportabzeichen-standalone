{# templates/admin/participants/qr_print.html.twig #}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Druckansicht: {{ group.name }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; height: 0; border: none; }
            body { background: white !important; margin: 0; padding: 0; }
            .qr-card { box-shadow: none !important; border: 1px solid #ddd !important; }
        }
        body { background-color: #f8f9fa; }
        .qr-card {
            border: 2px dashed #666;
            padding: 20px;
            margin-bottom: 25px;
            text-align: center;
            background: white;
            border-radius: 12px;
            break-inside: avoid;
        }
        .qr-code img { 
            width: 180px; 
            height: 180px; 
            border: 1px solid #eee;
            padding: 5px;
        }
        .student-name { font-weight: bold; font-size: 1.2rem; margin-bottom: 2px; }
        .group-label { color: #6c757d; font-size: 0.9rem; margin-bottom: 10px; }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-5 no-print">
            <div>
                <h1 class="h3 mb-0">Login-Karten: {{ group.name }}</h1>
                <p class="text-muted">Anzahl: {{ participants|length }}</p>
            </div>
            <div class="btn-group">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">Abbrechen</a>
                <button onclick="window.print()" class="btn btn-primary px-4">
                    Jetzt drucken
                </button>
            </div>
        </div>

        <div class="row">
            {% for p in participants %}
                {% if p.user and p.user.loginToken %}
                    <div class="col-6">
                        <div class="qr-card shadow-sm">
                            <div class="student-name">{{ p.user.firstname }} {{ p.user.lastname }}</div>
                            <div class="group-label">{{ group.name }}</div>
                            
                            <div class="qr-code mb-3">
                                {# Login URL mit Ziel-Pfad zu deinen Ergebnissen #}
                                {% set login_url = url('app_login', {
                                    'token': p.user.loginToken, 
                                    '_target_path': path('my_results')
                                }) %}
                                
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ login_url|url_encode }}" alt="QR Login">
                            </div>

                            <div class="text-secondary small fw-bold">
                                SCANNEN ZUM EINLOGGEN<br>
                                <span class="text-dark">{{ app.request.host }}</span>
                            </div>
                        </div>
                    </div>
                    
                    {# Seitenumbruch nach jeweils 6 Karten (3 Zeilen Ã  2 Karten) #}
                    {% if loop.index % 6 == 0 and not loop.last %}
                        <div class="page-break"></div>
                    {% endif %}
                {% endif %}
            {% else %}
                <div class="alert alert-info no-print">
                    Keine Teilnehmer in dieser Gruppe gefunden.
                </div>
            {% endfor %}
        </div>
    </div>

</body>
</html>