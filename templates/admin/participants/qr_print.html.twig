{# templates/admin/participants/qr_print.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ 'QR-Codes Druckansicht'|trans }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        @media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; }
            body { background-color: white !important; }
        }
        .qr-card {
            border: 2px dashed #ccc;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            break-inside: avoid;
            background: white;
        }
        .qr-code img {
            max-width: 200px;
            height: auto;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
            <h1>{{ 'Login QR-Codes'|trans }}</h1>
            <div class="btn-group">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> {{ 'Zur端ck'|trans }}
                </a>
                <button onclick="window.print()" class="btn btn-primary">
                    <i class="bi bi-printer"></i> {{ 'Jetzt drucken'|trans }}
                </button>
            </div>
        </div>

        <div class="row">
            {# --- FLEXIBLER LOGIK-CHECK --- #}
            {# Falls nur ein einzelner Participant 端bergeben wurde, packen wir ihn in ein Array #}
            {% set list = participants is defined ? participants : [participant] %}

            {% for p in list %}
                {% if p and p.user and p.user.loginToken %}
                    <div class="col-md-6">
                        <div class="qr-card shadow-sm">
                            <h2 class="h4 mb-1">{{ p.user.firstname }} {{ p.user.lastname }}</h2>
                            <p class="text-muted mb-3">
                                {% if p.user.groups is not empty %}
                                    {{ p.user.groups|first.name }}
                                {% endif %}
                            </p>
                            
                            <div class="qr-code mb-3">
                                {# Wir nutzen hier die loginUrl, die dein Controller bereits mitschickt #}
                                {# Falls es eine Liste ist, m端sste der Controller qr_codes liefern #}
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ (loginUrl is defined ? loginUrl : url('app_login_token', {token: p.user.loginToken}))|url_encode }}" alt="QR Login">
                            </div>

                            <div class="small text-secondary">
                                {{ 'Scannen zum Einloggen'|trans }}<br>
                                <strong>{{ app.request.host }}</strong>
                            </div>
                        </div>
                    </div>
                    
                    {% if loop.index % 6 == 0 %}
                        <div class="page-break"></div>
                    {% endif %}
                {% endif %}
            {% else %}
                <div class="alert alert-warning no-print">
                    {{ 'Kein g端ltiger Teilnehmer oder Login-Token gefunden.'|trans }}
                </div>
            {% endfor %}
        </div>
    </div>

</body>
</html>