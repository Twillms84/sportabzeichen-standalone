{# templates/admin/participants/qr_print.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ 'QR-Codes Druckansicht'|trans }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        @media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; }
            body { background-color: white !important; }
        }
        .qr-card {
            border: 2px dashed #ccc;
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            break-inside: avoid;
            background: white;
        }
        .qr-code img {
            max-width: 180px;
            height: auto;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container my-4">
        <div class="d-flex justify-content-between align-items-center mb-4 no-print">
            <h1><i class="bi bi-qr-code"></i> {{ 'Login-Karten'|trans }}</h1>
            <div class="btn-group">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> {{ 'Zurück'|trans }}
                </a>
                <button onclick="window.print()" class="btn btn-primary">
                    <i class="bi bi-printer"></i> {{ 'Drucken'|trans }}
                </button>
            </div>
        </div>

        <div class="row">
            {% set list = participants is defined ? participants : [participant] %}

            {% for p in list %}
                {% if p and p.user and p.user.loginToken %}
                    <div class="col-md-6 col-lg-4">
                        <div class="qr-card shadow-sm">
                            <h2 class="h5 mb-1">{{ p.user.firstname }} {{ p.user.lastname }}</h2>
                            <p class="text-muted small mb-2">
                                {% if p.user.groups is not empty %}
                                    <span class="badge bg-light text-dark border">{{ p.user.groups|first.name }}</span>
                                {% endif %}
                            </p>
                            
                            <div class="qr-code mb-3">
                                {# Wir generieren hier die URL für den Autologin #}
                                {# Stelle sicher, dass 'app_login' oder dein Login-Pfad existiert #}
                                {% set login_url = url('app_token_login', {
                                    'token': p.user.loginToken, 
                                    '_target_path': path('my_results') 
                                }) %}
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ login_url|url_encode }}" alt="QR Login">
                            </div>

                            <div class="small text-secondary mt-2" style="font-size: 0.75rem;">
                                {{ 'Einfach scannen & loslegen'|trans }}<br>
                                <span class="text-primary">{{ app.request.host }}</span>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% else %}
                <div class="alert alert-warning no-print">
                    {{ 'Keine gültigen Daten gefunden.'|trans }}
                </div>
            {% endfor %}
        </div>
    </div>
</body>
</html>