{# templates/admin/participants/qr_print.html.twig #}
<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>QR-Druckansicht</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @media print {
            .no-print { display: none !important; }
            .page-break { page-break-after: always; height: 0; border: none; }
            body { background: white !important; margin: 0; padding: 0; }
            .qr-card { box-shadow: none !important; border: 1px solid #ddd !important; }
        }
        body { background-color: #f8f9fa; }
        .qr-card {
            border: 2px dashed #666;
            padding: 20px;
            margin-bottom: 25px;
            text-align: center;
            background: white;
            border-radius: 12px;
            break-inside: avoid;
        }
        .qr-code img { width: 180px; height: 180px; border: 1px solid #eee; padding: 5px; }
        .student-name { font-weight: bold; font-size: 1.2rem; margin-bottom: 2px; }
    </style>
</head>
<body>

    <div class="container my-5">
        <div class="d-flex justify-content-between align-items-center mb-5 no-print">
            <h1 class="h3 mb-0">QR-Login Karten</h1>
            <div class="btn-group">
                <a href="javascript:history.back()" class="btn btn-outline-secondary">Abbrechen</a>
                <button onclick="window.print()" class="btn btn-primary px-4">Drucken</button>
            </div>
        </div>

        <div class="row">
            {# Liste erstellen: Entweder aus 'participants' oder dem einzelnen 'participant' #}
            {% set list = participants is defined ? participants : (participant is defined ? [participant] : []) %}

            {% for p in list %}
                {% if p.user and p.user.loginToken %}
                    <div class="col-6">
                        <div class="qr-card shadow-sm">
                            <div class="student-name">{{ p.user.firstname }} {{ p.user.lastname }}</div>
                            
                            <div class="text-muted small mb-2">
                                {# Wir versuchen die Gruppe über den User zu finden #}
                                {% if group is defined and group %}
                                    {{ group.name }}
                                {% elseif p.user.groups is defined and p.user.groups|length > 0 %}
                                    {{ p.user.groups|first.name }}
                                {% endif %}
                            </div>
                            
                            <div class="qr-code mb-3">
                                {# Login URL mit Ziel-Pfad zu deinen Ergebnissen #}
                                {% set login_url = url('app_login', {
                                    'token': p.user.loginToken, 
                                    '_target_path': path('my_results'),
                                    'always_use_target_path': 1
                                }) %}
                                
                                <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data={{ login_url|url_encode }}" alt="QR Login">
                            </div>

                            <div class="text-secondary small fw-bold">
                                SCANNEN ZUM EINLOGGEN<br>
                                <span class="text-dark">{{ app.request.host }}</span>
                            </div>
                        </div>
                    </div>
                    
                    {% if loop.index % 6 == 0 and not loop.last %}
                        <div class="page-break"></div>
                    {% endif %}
                {% endif %}
            {% else %}
                <div class="alert alert-warning no-print">Keine Teilnehmer mit gültigem Token gefunden.</div>
            {% endfor %}
        </div>
    </div>
</body>
</html>