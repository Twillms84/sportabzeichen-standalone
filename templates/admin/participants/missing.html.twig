{% extends 'base.html.twig' %}

{% block page_title %}Benutzer nacherfassen{% endblock %}

{% block content %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i>IServ-Benutzer manuell hinzuf체gen</h5>
            <a href="{{ path('sportabzeichen_admin_participants_index') }}" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-arrow-left"></i> Zur체ck zur Liste
            </a>
        </div>

        <div class="card-body">
             
            <form method="get" action="{{ path('sportabzeichen_admin_participants_missing') }}" class="mb-4">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" 
                           placeholder="Nach Name suchen (mind. 3 Zeichen)..." 
                           value="{{ searchTerm }}" autofocus>
                    <button class="btn btn-primary" type="submit">
                        <i class="bi bi-search"></i> Suchen
                    </button>
                </div>
                <div class="form-text">
                    <i class="bi bi-info-circle"></i> Benutzer, die bereits in der Teilnehmerliste sind, werden hier ausgeblendet.
                </div>
            </form>

            <hr>

            {% if missingUsers is empty %}
                {% if searchTerm %}
                    <div class="alert alert-warning d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>Keine passenden Benutzer gefunden (oder sie sind bereits Teilnehmer).</div>
                    </div>
                {% else %}
                    <div class="alert alert-info d-flex align-items-center">
                        <i class="bi bi-info-circle-fill fs-4 me-3"></i>
                        <div>Bitte geben Sie einen Namen ein, um Benutzer zu suchen.</div>
                    </div>
                {% endif %}
            {% else %}
                
                {% if limitReached %}
                    <div class="alert alert-warning d-flex align-items-center">
                        <i class="bi bi-exclamation-circle-fill fs-4 me-3"></i>
                        <div>Suche auf 50 Treffer begrenzt. Bitte pr채ziser suchen.</div>
                    </div>
                {% endif %}

                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Benutzername</th>
                                <th>Klasse/Gruppen</th>
                                <th class="text-end">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in missingUsers %}
                            <tr>
                                <td><strong>{{ user.lastname }}</strong>, {{ user.firstname }}</td>
                                <td><code class="text-dark bg-light px-2 py-1 rounded">{{ user.username }}</code></td>
                                <td>
                                    {% for group in user.groups %}
                                        <span class="badge bg-secondary">{{ group.name }}</span>
                                    {% else %}
                                        <span class="text-muted fst-italic">-</span>
                                    {% endfor %}
                                </td>
                                <td class="text-end">
                                    <a href="{{ path('sportabzeichen_admin_participants_add', {username: user.username}) }}" 
                                       class="btn btn-success btn-sm">
                                        <i class="bi bi-plus-circle"></i> Hinzuf체gen
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}