{% extends 'base.html.twig' %}

<h1>{{ 'Teilnehmerverwaltung'|trans }}</h1>

{% block body %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading d-flex justify-content-between align-items-center">
            <h3 class="panel-title">
                {{'Registrierte Teilnehmer'|trans}}
                <span class="badge">{{ totalCount }}</span>
            </h3>
            <div class="btn-group pull-right">
                <a href="{{ path('admin_participants_missing') }}" class="btn btn-primary btn-sm">
                    {{ icon('plus') }} {{'Nacherfassen'|trans}}
                </a>
                <a href="{{ path('admin_upload_participants') }}" class="btn btn-default btn-sm">
                    {{ icon('upload') }} {{'Nacherfassen'|trans}}
                </a>
            </div>
        </div>

        <div class="panel-body">
            
            <form method="get" class="input-group mb-3">
                <span class="input-group-addon">{{ icon('search') }}</span>
                <input type="text" name="q" class="form-control" value="{{ searchTerm }}" placeholder="{{'Suche (Enter drücken)...'}}">
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>{{'Name'}}</th>
                            <th>{{'Klasse'}}</th>
                            <th>{{'Geburtstag'}}</th>
                            <th>{{'Geschlecht'}}</th>
                            <th class="text-end">{{'Aktion'}}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for p in participants %}
                        <tr>
                            <td>
                                {% if p.user %}
                                    {{ p.user.lastname }}, {{ p.user.firstname }}
                                {% else %}
                                    <span class="text-muted"><em>{{'Gelöschter Nutzer'}}</em></span>
                                {% endif %}
                            </td>
                            <td>
                                {% if p.user %}
                                    {% for group in p.user.groups %}
                                        <span class="label label-default">{{ group.name }}</span>
                                    {% else %}
                                        <span class="text-muted">-</span>
                                    {% endfor %}
                                {% else %}
                                    -
                                {% endif %}
                            </td>
                            <td>{{ p.geburtsdatum ? p.geburtsdatum|date('d.m.Y') : '-' }}</td>
                            <td>
                                {# HIER: Mapping von DB-Wert (MALE/FEMALE) zur Anzeige (M/W) #}
                                {% if p.geschlecht == 'MALE' %}
                                    M
                                {% elseif p.geschlecht == 'FEMALE' %}
                                    W
                                {% else %}
                                    {{ p.geschlecht }}
                                {% endif %}
                            </td>
                            <td class="text-end">
                                <button type="button" class="btn btn-default btn-sm"
                                        data-toggle="modal" 
                                        data-target="#modal-{{ p.id }}">
                                    {{ icon('pencil') }}
                                </button>
                            </td>
                        </tr>

                        {# --- MODAL (Server-Side rendered per Row) --- #}
                        <div class="modal fade" id="modal-{{ p.id }}" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <form method="post" action="{{ path('sportabzeichen_admin_participants_update', {id: p.id}) }}">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">
                                                {{ _('Bearbeiten') }}: 
                                                {% if p.user %}
                                                    {{ p.user.firstname }} {{ p.user.lastname }}
                                                {% else %}
                                                    {{ _('Unbekannt') }}
                                                {% endif %}
                                            </h4>
                                        </div>
                                        <div class="modal-body text-left">
                                            <div class="form-group">
                                                <label>{{ _('Geburtsdatum') }}</label>
                                                <input type="date" name="dob" class="form-control" 
                                                       value="{{ p.geburtsdatum ? p.geburtsdatum|date('Y-m-d') : '' }}">
                                            </div>
                                            <div class="form-group">
                                                <label>{{ _('Geschlecht') }}</label>
                                                {# Select sendet MALE/FEMALE an den Controller #}
                                                <select name="gender" class="form-control">
                                                    <option value="MALE" {{ p.geschlecht == 'MALE' ? 'selected' : '' }}>
                                                        {{ _('Männlich') }} (M)
                                                    </option>
                                                    <option value="FEMALE" {{ p.geschlecht == 'FEMALE' ? 'selected' : '' }}>
                                                        {{ _('Weiblich') }} (W)
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">{{ _('Abbrechen') }}</button>
                                            <button type="submit" class="btn btn-primary">{{'Speichern'}}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        {# --- ENDE MODAL --- #}

                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                {{'Keine Teilnehmer gefunden.'}}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Paginierung #}
             {% if maxPages > 1 %}
                <nav aria-label="Page navigation" class="text-center">
                    <ul class="pagination">
                        <li class="{{ currentPage == 1 ? 'disabled' : '' }}">
                            <a href="{{ currentPage > 1 ? path('sportabzeichen_admin_participants_index', {page: currentPage - 1, q: searchTerm}) : '#' }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active">
                            <span>Seite {{ currentPage }} von {{ maxPages }}</span>
                        </li>
                        <li class="{{ currentPage == maxPages ? 'disabled' : '' }}">
                            <a href="{{ currentPage < maxPages ? path('sportabzeichen_admin_participants_index', {page: currentPage + 1, q: searchTerm}) : '#' }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
{% endblock %}