{% extends 'base.html.twig' %}

{% block title %}{{ 'Teilnehmerverwaltung'|trans }}{% endblock %}

{% block body %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading d-flex justify-content-between align-items-center">
            <h3 class="panel-title">
                {{'Registrierte Teilnehmer'|trans}}
                <span class="badge">{{ totalCount }}</span>
            </h3>
            <div class="btn-group pull-right">
                <a href="{{ path('admin_participants_missing') }}" class="btn btn-primary btn-sm">
                    {{ icon('plus') }} {{'Nacherfassen'|trans}}
                </a>
                <a href="{{ path('admin_participants_upload') }}" class="btn btn-default btn-sm">
                    {{ icon('upload') }} {{'Import'|trans}}
                </a>
            </div>
        </div>

        <div class="panel-body">
            
            <form method="get" class="input-group mb-3">
                <span class="input-group-addon">{{ icon('search') }}</span>
                <input type="text" name="q" class="form-control" value="{{ searchTerm }}" placeholder="{{'Suche (Name, IServ-Account)...'}}">
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>{{'Name'}}</th>
                            <th>{{'Klasse/Gruppe'}}</th>
                            <th>{{'Geburtstag'}}</th>
                            <th>{{'Geschlecht'}}</th>
                            <th class="text-end">{{'Aktion'}}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for p in participants %}
                        {# p ist jetzt ein Participant-Objekt #}
                        <tr>
                            {# 1. Name (via Relation zum User) #}
                            <td>
                                {% if p.user %}
                                    <strong>{{ p.user.lastname }}</strong>, {{ p.user.firstname }}
                                    {% if p.user.act %}
                                        <br><small class="text-muted">({{ p.user.act }})</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted"><em>{{ 'User gelöscht'|trans }}</em></span>
                                {% endif %}
                            </td>

                            {# 2. Klasse (Iterieren über die Gruppen-Collection) #}
                            <td>
                                {% if p.user and p.user.groups is not empty %}
                                    {% for group in p.user.groups %}
                                        <span class="badge bg-secondary">{{ group.name }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span class="text-muted small">-</span>
                                {% endif %}
                            </td>

                            {# 3. Geburtstag #}
                            <td>{{ p.birthdate ? p.birthdate|date('d.m.Y') : '-' }}</td>

                            {# 4. Geschlecht #}
                            <td>
                                {% if p.gender == 'MALE' %}
                                    M
                                {% elseif p.gender == 'FEMALE' %}
                                    W
                                {% elseif p.gender == 'DIVERSE' %}
                                    D
                                {% else %}
                                    {{ p.gender }}
                                {% endif %}
                            </td>

                            {# 5. Aktion #}
                            <td class="text-end">
                                <button type="button" class="btn btn-default btn-sm"
                                        data-toggle="modal" 
                                        data-target="#modal-{{ p.id }}">
                                    {{ icon('pencil') }}
                                </button>
                            </td>
                        </tr>

                        {# --- MODAL --- #}
                        <div class="modal fade" id="modal-{{ p.id }}" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                                <form method="post" action="{{ path('admin_participants_update', {id: p.id}) }}">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <h4 class="modal-title">
                                                {{ 'Bearbeiten'|trans }}: 
                                                {% if p.user %}
                                                    {{ p.user.firstname }} {{ p.user.lastname }}
                                                {% else %}
                                                    {{ 'Teilnehmer'|trans }} #{{ p.id }}
                                                {% endif %}
                                            </h4>
                                        </div>
                                        <div class="modal-body text-left">
                                            <div class="form-group">
                                                <label>{{'Geburtsdatum'}}</label>
                                                {# Zugriff auf Objekt-Property birthdate #}
                                                <input type="date" name="dob" class="form-control" 
                                                       value="{{ p.birthdate ? p.birthdate|date('Y-m-d') : '' }}">
                                            </div>
                                            <div class="form-group">
                                                <label>{{'Geschlecht'}}</label>
                                                {# Zugriff auf Objekt-Property gender #}
                                                <select name="gender" class="form-control">
                                                    <option value="MALE" {{ p.gender == 'MALE' ? 'selected' : '' }}>
                                                        {{'Männlich'}} (M)
                                                    </option>
                                                    <option value="FEMALE" {{ p.gender == 'FEMALE' ? 'selected' : '' }}>
                                                        {{'Weiblich'}} (W)
                                                    </option>
                                                    <option value="DIVERSE" {{ p.gender == 'DIVERSE' ? 'selected' : '' }}>
                                                        {{'Divers'}} (D)
                                                    </option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">{{'Abbrechen'}}</button>
                                            <button type="submit" class="btn btn-primary">{{'Speichern'}}</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        {# --- ENDE MODAL --- #}

                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">
                                {{'Keine Teilnehmer gefunden.'}}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {# Paginierung #}
            {% if maxPages > 1 %}
                <nav aria-label="Page navigation" class="text-center">
                    <ul class="pagination">
                        <li class="{{ currentPage == 1 ? 'disabled' : '' }}">
                            <a href="{{ currentPage > 1 ? path('admin_participants_index', {page: currentPage - 1, q: searchTerm}) : '#' }}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li class="active">
                            <span>Seite {{ currentPage }} von {{ maxPages }}</span>
                        </li>
                        <li class="{{ currentPage == maxPages ? 'disabled' : '' }}">
                            <a href="{{ currentPage < maxPages ? path('admin_participants_index', {page: currentPage + 1, q: searchTerm}) : '#' }}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            {% endif %}
        </div>
    </div>
{% endblock %}