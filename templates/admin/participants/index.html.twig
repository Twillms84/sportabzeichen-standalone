{% extends 'base.html.twig' %}

{% block title %}{{ 'Teilnehmerverwaltung'|trans }}{% endblock %}

{% block body %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="container-fluid mt-3">
        
        {# HEADER & BUTTONS #}
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="h4 m-0">
                {{ 'Registrierte Teilnehmer'|trans }}
                <span class="badge bg-secondary rounded-pill ms-2 fs-6">{{ totalCount }}</span>
            </h3>
            
            <div class="btn-group">
                <a href="{{ path('admin_participants_new') }}" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-lg"></i> {{ 'Neu anlegen'|trans }}
                </a>
                <a href="{{ path('admin_participants_missing') }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-person-plus-fill"></i> {{ 'Nacherfassen'|trans }}
                </a>
                <a href="{{ path('admin_participants_upload') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-upload"></i> {{ 'Import'|trans }}
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                
                {# --- SUCHLEISTE (Server-Side) --- #}
                <form method="get" class="mb-4">
                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                        <input type="text" name="q" class="form-control" 
                               placeholder="{{ 'Nach Name oder E-Mail suchen...'|trans }}" 
                               value="{{ searchQuery }}">
                        <button class="btn btn-primary" type="submit">{{ 'Suchen'|trans }}</button>
                        {% if searchQuery %}
                            <a href="{{ path('admin_participants_index') }}" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        {% endif %}
                    </div>
                </form>

                {# --- TABELLE --- #}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Klasse/Gruppe'|trans }}</th>
                                <th>{{ 'Geburtstag'|trans }}</th>
                                <th>{{ 'Geschlecht'|trans }}</th>
                                <th class="text-end">{{ 'Aktion'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for p in participants %}
                            <tr>
                                <td>
                                    {% if p.user %}
                                        <strong>{{ p.user.lastname }}</strong>, {{ p.user.firstname }}
                                        {% if p.user.act %}
                                            <br><small class="text-muted">({{ p.user.act }})</small>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted"><em>{{ 'User gelöscht'|trans }}</em></span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if p.user and p.user.groups is not empty %}
                                        {% for group in p.user.groups %}
                                            <span class="badge bg-secondary">{{ group.name }}</span>
                                        {% endfor %}
                                    {% else %}
                                        <span class="text-muted small">-</span>
                                    {% endif %}
                                </td>
                                <td>{{ p.birthdate ? p.birthdate|date('d.m.Y') : '-' }}</td>
                                <td>
                                    {% set genders = {'MALE': 'M', 'FEMALE': 'W', 'DIVERSE': 'D'} %}
                                    {# Kleines Badge für bessere Sichtbarkeit #}
                                    <span class="badge bg-light text-dark border">
                                        {{ genders[p.gender] ?? p.gender }}
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <button type="button" 
                                                class="btn btn-outline-primary btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#genericEditModal"
                                                data-id="{{ p.id }}"
                                                data-name="{{ p.user ? p.user.firstname ~ ' ' ~ p.user.lastname : 'Teilnehmer' }}"
                                                data-dob="{{ p.birthdate ? p.birthdate|date('Y-m-d') : '' }}"
                                                data-gender="{{ p.gender }}">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                        
                                        <form method="post" 
                                              action="{{ path('admin_participants_delete', {id: p.id}) }}" 
                                              class="d-inline" 
                                              onsubmit="return confirm('{{ 'Teilnehmer wirklich löschen?'|trans }}');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center py-4 text-muted">
                                    {{ 'Keine Teilnehmer gefunden.'|trans }}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            {# --- PAGINATION FOOTER --- #}
            {% if pagesCount > 1 %}
            <div class="card-footer bg-white d-flex justify-content-between align-items-center">
                <small class="text-muted">Seite {{ currentPage }} von {{ pagesCount }}</small>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item {{ currentPage == 1 ? 'disabled' }}">
                            <a class="page-link" href="{{ path('admin_participants_index', {page: currentPage - 1, q: searchQuery}) }}">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                        {% for i in 1..pagesCount %}
                            <li class="page-item {{ currentPage == i ? 'active' }}">
                                <a class="page-link" href="{{ path('admin_participants_index', {page: i, q: searchQuery}) }}">{{ i }}</a>
                            </li>
                        {% endfor %}
                        <li class="page-item {{ currentPage == pagesCount ? 'disabled' }}">
                            <a class="page-link" href="{{ path('admin_participants_index', {page: currentPage + 1, q: searchQuery}) }}">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
            {% endif %}
        </div>
    </div>

    {# --- GENERIC MODAL --- #}
    {# Hinweis: Bootstrap 5 nutzt 'data-bs-toggle' und 'data-bs-dismiss' statt 'data-toggle' #}
    <div class="modal fade" id="genericEditModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <form method="post" action="#" id="genericEditForm" data-url-template="{{ path('admin_participants_update', {id: 'PLACEHOLDER_ID'}) }}">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ 'Bearbeiten'|trans }}: <span id="modalUserName" class="fw-bold"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="modalDob" class="form-label">{{'Geburtsdatum'}}</label>
                            <input type="date" name="dob" id="modalDob" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="modalGender" class="form-label">{{'Geschlecht'}}</label>
                            <select name="gender" id="modalGender" class="form-select">
                                <option value="MALE">{{'Männlich'}} (M)</option>
                                <option value="FEMALE">{{'Weiblich'}} (W)</option>
                                <option value="DIVERSE">{{'Divers'}} (D)</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{'Abbrechen'}}</button>
                        <button type="submit" class="btn btn-primary">{{'Speichern'}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}