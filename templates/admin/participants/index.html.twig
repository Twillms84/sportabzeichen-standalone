{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Wir binden hier dein neues JS ein #}
    <script src="{{ asset('js/admin_participants.js') }}"></script>
{% endblock %}

{% block title %}{{ 'Teilnehmerverwaltung'|trans }}{% endblock %}

{% block body %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="panel panel-default">
        <div class="panel-heading flex-header">
            <h3 class="panel-title">
                {{'Registrierte Teilnehmer'|trans}}
                <span class="badge">{{ totalCount }}</span>
            </h3>
            <div class="btn-group">
                <a href="{{ path('admin_participants_new') }}" class="btn btn-success btn-sm">
                    {{ icon('plus') }} {{'Neu anlegen'|trans}}
                </a>
                <a href="{{ path('admin_participants_missing') }}" class="btn btn-primary btn-sm">
                    {{ icon('user-plus') }} {{'Nacherfassen'|trans}}
                </a>
                <a href="{{ path('admin_participants_upload') }}" class="btn btn-default btn-sm">
                    {{ icon('upload') }} {{'Import'|trans}}
                </a>
            </div>
        </div>

        <div class="panel-body">
            {# ID 'searchTable' für dein JavaScript hinzugefügt #}
            <div class="input-group mb-3">
                <span class="input-group-addon">{{ icon('search') }}</span>
                <input type="text" id="searchTable" class="form-control" placeholder="{{'Live-Suche in dieser Ansicht...'}}">
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle participants-table">
                    <thead>
                        <tr>
                            <th>{{'Name'}}</th>
                            <th>{{'Klasse/Gruppe'}}</th>
                            <th>{{'Geburtstag'}}</th>
                            <th>{{'Geschlecht'}}</th>
                            <th class="text-end">{{'Aktion'}}</th>
                        </tr>
                    </thead>
                    {# ID 'participantRows' für dein JavaScript hinzugefügt #}
                    <tbody id="participantRows">
                    {% for p in participants %}
                        <tr>
                            <td>
                                {% if p.user %}
                                    <strong>{{ p.user.lastname }}</strong>, {{ p.user.firstname }}
                                    {% if p.user.act %}
                                        <br><small class="text-muted">({{ p.user.act }})</small>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted"><em>{{ 'User gelöscht'|trans }}</em></span>
                                {% endif %}
                            </td>
                            <td>
                                {% if p.user and p.user.groups is not empty %}
                                    {% for group in p.user.groups %}
                                        <span class="badge bg-secondary">{{ group.name }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span class="text-muted small">-</span>
                                {% endif %}
                            </td>
                            <td>{{ p.birthdate ? p.birthdate|date('d.m.Y') : '-' }}</td>
                            <td>
                                {% set genders = {'MALE': 'M', 'FEMALE': 'W', 'DIVERSE': 'D'} %}
                                {{ genders[p.gender] ?? p.gender }}
                            </td>
                            <td class="text-end action-col">
                                <div class="btn-group">
                                    {# Pencil-Button nutzt jetzt das Generic Modal und liefert die Daten via data-Attribute #}
                                    <button type="button" 
                                            class="btn btn-default btn-sm" 
                                            data-toggle="modal" 
                                            data-target="#genericEditModal"
                                            data-id="{{ p.id }}"
                                            data-name="{{ p.user ? p.user.firstname ~ ' ' ~ p.user.lastname : 'Teilnehmer' }}"
                                            data-dob="{{ p.birthdate ? p.birthdate|date('Y-m-d') : '' }}"
                                            data-gender="{{ p.gender }}">
                                        {{ icon('pencil') }}
                                    </button>
                                    
                                    <form method="post" 
                                          action="{{ path('admin_participants_delete', {id: p.id}) }}" 
                                          class="d-inline js-delete-form" 
                                          data-confirm="{{ 'Teilnehmer wirklich löschen? Dies kann auch den User-Account betreffen.'|trans }}">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            {{ icon('trash') }}
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5" class="text-center text-muted">{{'Keine Teilnehmer gefunden.'}}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            
            {# Paginierung hier einfügen ... #}
        </div>
    </div>

    {# --- GENERIC MODAL (AUSSERHALB DER SCHLEIFE) --- #}
    <div class="modal fade" id="genericEditModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <form method="post" action="#" id="genericEditForm" data-url-template="{{ path('admin_participants_update', {id: 'PLACEHOLDER_ID'}) }}">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">{{ 'Bearbeiten'|trans }}: <span id="modalUserName"></span></h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="modalDob">{{'Geburtsdatum'}}</label>
                            <input type="date" name="dob" id="modalDob" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="modalGender">{{'Geschlecht'}}</label>
                            <select name="gender" id="modalGender" class="form-control">
                                <option value="MALE">{{'Männlich'}} (M)</option>
                                <option value="FEMALE">{{'Weiblich'}} (W)</option>
                                <option value="DIVERSE">{{'Divers'}} (D)</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">{{'Abbrechen'}}</button>
                        <button type="submit" class="btn btn-primary">{{'Speichern'}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}