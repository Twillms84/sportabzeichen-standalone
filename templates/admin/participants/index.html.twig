{% extends 'base.html.twig' %}

{% block title %}{{ 'Teilnehmerverwaltung'|trans }}{% endblock %}

{% block body %}
    {% include 'admin/_tabs.html.twig' with {'activeTab': 'participants_manage'} %}

    <div class="container-fluid" data-controller="admin-participant">
        
        {# HEADER & BUTTONS #}
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="h4 m-0">
                {{ 'Registrierte Teilnehmer'|trans }}
                <span class="badge bg-secondary rounded-pill ms-2 fs-6">{{ totalCount }}</span>
            </h3>
            
            <div class="btn-group shadow-sm">
                <a href="{{ path('admin_participants_new') }}" class="btn btn-success btn-sm">
                    <i class="bi bi-plus-lg"></i> {{ 'Neu anlegen'|trans }}
                </a>
                <a href="{{ path('admin_participants_missing') }}" class="btn btn-primary btn-sm">
                    <i class="bi bi-person-plus-fill"></i> {{ 'Nacherfassen'|trans }}
                </a>
                <a href="{{ path('admin_participants_upload') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-upload"></i> {{ 'Import'|trans }}
                </a>
            </div>
        </div>

        {# --- BULK ACTIONS BAR --- #}
        <div class="card bg-primary text-white mb-3 shadow-sm d-none" data-admin-participant-target="bulkBar">
            <div class="card-body py-2 d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check2-circle fs-4 me-3"></i>
                    <div>
                        <span class="fw-bold" data-admin-participant-target="selectedCount">0</span> 
                        {{ 'Teilnehmer ausgewählt'|trans }}
                    </div>
                </div>
                <div class="d-flex align-items-center">
                    <select class="form-select form-select-sm me-2" style="min-width: 200px;" data-admin-participant-target="groupSelect">
                        <option value="">-- {{ 'Gruppe zuweisen'|trans }} --</option>
                        {% for group in availableGroups %}
                            <option value="{{ group.id }}">{{ group.name }}</option>
                        {% endfor %}
                    </select>
                    <button class="btn btn-light btn-sm fw-bold" 
                            data-action="click->admin-participant#assignGroup"
                            data-url="{{ path('admin_participants_bulk_assign_group') }}">
                        {{ 'Anwenden'|trans }}
                    </button>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                
                {# --- SUCHLEISTE & FILTER --- #}
                <form method="get" class="mb-4">
                    <div class="row g-2">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                                <input type="text" name="q" class="form-control" 
                                       placeholder="{{ 'Nach Name oder E-Mail suchen...'|trans }}" 
                                       value="{{ searchQuery }}">
                                <button class="btn btn-primary" type="submit">{{ 'Suchen'|trans }}</button>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <select name="filter" class="form-select" onchange="this.form.submit()">
                                <option value="">{{ '-- Alle Teilnehmer --'|trans }}</option>
                                
                                {# Option für Teilnehmer ohne Gruppe #}
                                <option value="no_group" {{ app.request.query.get('filter') == 'no_group' ? 'selected' }}>
                                    ⚠️ {{ 'Ohne Gruppe'|trans }}
                                </option>

                                {# Trenner zur besseren Optik #}
                                <option disabled>──────────</option>

                                {# Dynamische Liste aller Gruppen #}
                                {% for group in availableGroups %}
                                    <option value="group_{{ group.id }}" {{ app.request.query.get('filter') == 'group_' ~ group.id ? 'selected' }}>
                                        {{ group.name }}
                                    {% endfor %}
                                </option>
                            </select>
                        </div>
                    </div>
                </form>

                {# --- TABELLE --- #}
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th style="width: 40px;">
                                    <input type="checkbox" class="form-check-input" data-action="change->admin-participant#toggleAll">
                                </th>
                                <th>{{ 'Name'|trans }}</th>
                                <th>{{ 'Klasse/Gruppe'|trans }}</th>
                                <th>{{ 'Geburtstag'|trans }}</th>
                                <th>{{ 'Geschlecht'|trans }}</th>
                                <th class="text-end">{{ 'Aktion'|trans }}</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for p in participants %}
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input participant-checkbox" 
                                           value="{{ p.user.id }}" 
                                           data-action="change->admin-participant#updateSelection">
                                </td>
                                <td>
                                    {% if p.user %}
                                        <strong>{{ p.user.lastname }}</strong>, {{ p.user.firstname }}
                                        {% if p.user.act %}
                                            <br><small class="text-muted">({{ p.user.act }})</small>
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted"><em>{{ 'User gelöscht'|trans }}</em></span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if p.user and p.user.groups is not empty %}
                                        {% for group in p.user.groups %}
                                            <span class="badge bg-info text-dark">{{ group.name }}</span>
                                        {% endfor %}
                                    {% else %}
                                        <span class="badge bg-warning-subtle text-warning border border-warning-subtle small">
                                            <i class="bi bi-exclamation-triangle"></i> {{ 'Keine Gruppe'|trans }}
                                        </span>
                                    {% endif %}
                                </td>
                                <td>{{ p.birthdate ? p.birthdate|date('d.m.Y') : '-' }}</td>
                                <td>
                                    {% set genders = {'MALE': 'M', 'FEMALE': 'W', 'DIVERSE': 'D'} %}
                                    <span class="badge bg-light text-dark border">
                                        {{ genders[p.gender] ?? p.gender }}
                                    </span>
                                </td>
                                <td class="text-end">
                                    <div class="btn-group">
                                        <button type="button" 
                                                class="btn btn-outline-primary btn-sm" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#genericEditModal"
                                                data-id="{{ p.id }}"
                                                data-name="{{ p.user ? p.user.firstname ~ ' ' ~ p.user.lastname : 'Teilnehmer' }}"
                                                data-dob="{{ p.birthdate ? p.birthdate|date('Y-m-d') : '' }}"
                                                data-gender="{{ p.gender }}">
                                            <i class="bi bi-pencil-square"></i>
                                        </button>
                                        
                                        <form method="post" 
                                              action="{{ path('admin_participants_delete', {id: p.id}) }}" 
                                              class="d-inline" 
                                              onsubmit="return confirm('{{ 'Teilnehmer wirklich löschen?'|trans }}');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            {# ... Pagination bleibt gleich ... #}
        </div>
    </div>

    {# --- GENERIC MODAL --- #}
    <div class="modal fade" id="genericEditModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <form method="post" action="#" id="genericEditForm" data-url-template="{{ path('admin_participants_update', {id: 'PLACEHOLDER_ID'}) }}">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">{{ 'Bearbeiten'|trans }}: <span id="modalUserName" class="fw-bold"></span></h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="modalDob" class="form-label">{{'Geburtsdatum'|trans}}</label>
                            <input type="date" name="dob" id="modalDob" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="modalGender" class="form-label">{{'Geschlecht'|trans}}</label>
                            <select name="gender" id="modalGender" class="form-select">
                                <option value="MALE">{{'Männlich'|trans}} (M)</option>
                                <option value="FEMALE">{{'Weiblich'|trans}} (W)</option>
                                <option value="DIVERSE">{{'Divers'|trans}} (D)</option>
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{'Abbrechen'|trans}}</button>
                        <button type="submit" class="btn btn-primary">{{'Speichern'|trans}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}