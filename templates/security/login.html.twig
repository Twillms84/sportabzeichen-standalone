{% extends 'base.html.twig' %}

{% block title %}Anmelden - Sportabzeichen{% endblock %}

{# WICHTIG: Wir 체berschreiben den kompletten Layout-Block aus der Base #}
{% block layout %}

    {# Hier definieren wir direkt den Inhalt, ohne <main class="main-content"> #}
    {# Damit f채llt das Margin der Sidebar weg und die Seite ist zentriert #}
    
    <div class="container d-flex align-items-center justify-content-center" style="min-height: 100vh; background-color: #f8f9fa;">
        
        {# Hier beginnt dein Login-Card Code #}
        <div class="card shadow-lg border-0" style="max-width: 450px; width: 100%;">
            <div class="card-body p-5">
                <h3 class="text-center mb-4">Sportabzeichen Login</h3>
                
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="mb-3">
                        <label class="form-label">Benutzername</label>
                        <input type="text" name="_username" value="{{ last_username }}" class="form-control form-control-lg" required autofocus>
                    </div>
                    
                    <div class="mb-4">
                        <label class="form-label">Passwort</label>
                        <input type="password" name="_password" class="form-control form-control-lg" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary btn-lg w-100 mb-3" type="submit">
                        <i class="fas fa-sign-in-alt me-2"></i> Anmelden
                    </button>
                </form>

                <div class="text-center my-3 text-muted">oder</div>

                <button class="btn btn-outline-info btn-lg w-100 mb-4" disabled style="opacity: 0.6; cursor: not-allowed;">
                    <i class="fas fa-university me-2"></i> Mit Eduplaces anmelden
                    <span class="d-block small">(bald verf체gbar)</span>
                </button>

                <hr>

                <div class="text-center mt-3">
                    <p class="mb-1 text-muted small">Noch keinen Account f체r Ihre Schule?</p>
                    <a href="{{ path('app_register') }}" class="btn btn-link fw-bold">Jetzt registrieren</a>
                </div>
            </div>
        </div>
        {# Ende Login Card #}

    </div>

{% endblock %}