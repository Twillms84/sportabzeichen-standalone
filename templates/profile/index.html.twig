{% extends 'base.html.twig' %}

{% block title %}Mein Konto{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="fas fa-user-circle me-2"></i>Mein Konto</h5>
                </div>
                
                <div class="card-body p-4 text-body"> {# text-body stellt korrekte Schriftfarbe sicher #}
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">{{ form_row(form.firstname) }}</div>
                            <div class="col-md-6 mb-3">{{ form_row(form.lastname) }}</div>
                        </div>
                        
                        <div class="mb-3">{{ form_row(form.email) }}</div>

                        {% if form.examinerId is defined %}
                            <div class="mb-4">
                                {{ form_row(form.examinerId) }}
                            </div>
                        {% endif %}

                        <hr class="my-4">
                        
                        <h6 class="fw-bold mb-3 text-uppercase small text-muted">Sicherheit & Passwort</h6>
                        
                        {# Interaktive Passwort-Checkliste #}
                        <div class="alert alert-secondary border-0 shadow-sm small mb-4">
                            <div class="d-flex">
                                <i class="fas fa-shield-alt me-3 mt-1 h5 text-primary"></i>
                                <div>
                                    <strong>Passwort-Anforderungen:</strong>
                                    <ul class="list-unstyled mb-0 mt-2" id="pw-requirements">
                                        <li id="req-length" class="text-muted"><i class="fas fa-circle me-2 font-xs"></i>Mind. 8 Zeichen</li>
                                        <li id="req-upper" class="text-muted"><i class="fas fa-circle me-2 font-xs"></i>Groß- & Kleinbuchstaben</li>
                                        <li id="req-number" class="text-muted"><i class="fas fa-circle me-2 font-xs"></i>Mind. eine Zahl</li>
                                        <li id="req-special" class="text-muted"><i class="fas fa-circle me-2 font-xs"></i>Ein Sonderzeichen</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        {# Passwort-Eingabebereich mit angepassten Farben #}
                        <div class="bg-body-tertiary p-3 rounded border mb-4 shadow-sm">
                            {% if form.currentPassword is defined %}
                                <div class="mb-3">
                                    {{ form_row(form.currentPassword) }}
                                </div>
                                <hr class="opacity-10">
                            {% endif %}
                            
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.plainPassword.first, {'attr': {'class': 'pw-input'}}) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.plainPassword.second) }}
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success px-5 shadow-sm">
                                <i class="fas fa-save me-2"></i>Speichern
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .font-xs { font-size: 0.5rem; vertical-align: middle; }
    .req-met { color: #198754 !important; font-weight: bold; } /* Erfolg-Grün */
    .req-met i { color: #198754 !important; }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const pwInput = document.querySelector('.pw-input');
    if (!pwInput) return;

    const reqs = {
        length: { el: document.getElementById('req-length'), reg: /.{8,}/ },
        upper: { el: document.getElementById('req-upper'), reg: /(?=.*[a-z])(?=.*[A-Z])/ },
        number: { el: document.getElementById('req-number'), reg: /[0-9]/ },
        special: { el: document.getElementById('req-special'), reg: /[\W_]/ }
    };

    pwInput.addEventListener('input', function() {
        const val = this.value;
        
        for (const key in reqs) {
            if (reqs[key].reg.test(val)) {
                reqs[key].el.classList.add('req-met');
                reqs[key].el.querySelector('i').classList.replace('fa-circle', 'fa-check-circle');
            } else {
                reqs[key].el.classList.remove('req-met');
                reqs[key].el.querySelector('i').classList.replace('fa-check-circle', 'fa-circle');
            }
        }
    });
});
</script>
{% endblock %}