{% extends 'base.html.twig' %}

{% block title %}Mein Konto{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-person-circle"></i> Mein Konto</h5>
                </div>
                
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">{{ form_row(form.firstname) }}</div>
                            <div class="col-md-6 mb-3">{{ form_row(form.lastname) }}</div>
                        </div>
                        
                        <div class="mb-3">{{ form_row(form.email) }}</div>

                        {# PRÜFUNG: Nur rendern, wenn das Feld im Formular existiert #}
                        {% if form.examinerId is defined %}
                            <div class="mb-3">{{ form_row(form.examinerId) }}</div>
                        {% endif %}

                        <hr class="my-4">
                        <h6 class="text-muted mb-3"><i class="bi bi-shield-lock"></i> Sicherheit</h6>
                        
                        <div class="alert alert-secondary small">
                            Lassen Sie die Felder leer, wenn Sie Ihr Passwort <strong>nicht</strong> ändern möchten.
                        </div>
                        
                        <div class="bg-body-tertiary p-3 rounded mb-3 border">
                            {# PRÜFUNG: Auch hier für das aktuelle Passwort #}
                            {% if form.currentPassword is defined %}
                                <div class="mb-3">
                                    {{ form_row(form.currentPassword) }}
                                </div>
                                <hr class="border-secondary"> 
                            {% endif %}
                            
                            {{ form_row(form.plainPassword) }}
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save"></i> Speichern
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}