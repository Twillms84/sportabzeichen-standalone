{% extends "base.html.twig" %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">Prüfung bearbeiten: <span class="text-success">{{ exam.name }}</span></h2>
            <a href="{{ path('app_exams_dashboard') }}" class="btn btn-outline-light btn-sm">Zurück</a>
        </div>

        <div class="row">
            <div class="col-lg-5">
                <div class="osa-card mb-4">
                    <div class="osa-card-header">Stammdaten</div>
                    <div class="card-body p-4">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label">Bezeichnung</label>
                                <input type="text" name="exam_name" class="form-control" value="{{ exam.name }}">
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="form-label">Jahr</label>
                                    <input type="number" name="exam_year" class="form-control" value="{{ exam.year }}">
                                </div>
                                <div class="col-6 mb-3">
                                    <label class="form-label">Datum</label>
                                    <input type="date" name="exam_date" class="form-control" value="{{ exam.date }}">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-osa-primary w-100">Speichern</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-7">
                <div class="osa-card">
                    <div class="osa-card-header bg-dark">Gruppen hinzufügen</div>
                    <div class="card-body p-4">
                        <form method="post">
                            <label class="form-label fw-bold">Verfügbare Gruppen</label>
                            {# Hier das Dropdown mit Suche und Multiple Select #}
                            <select name="group_ids[]" class="selectpicker form-control mb-3" 
                                    multiple data-live-search="true" data-actions-box="true" 
                                    title="Gruppen auswählen...">
                                {% for id, name in available_groups %}
                                    <option value="{{ id }}">{{ name }}</option>
                                {% endfor %}
                            </select>
                            <input type="hidden" name="add_groups" value="1">
                            <button type="submit" class="btn btn-success w-100 mt-2">Ausgewählte Gruppen importieren</button>
                        </form>

                        <h6 class="mt-4 fw-bold">Bereits zugeordnet:</h6>
                        <div class="list-group list-group-flush">
                            {% for grp in assigned_groups %}
                                <div class="list-group-item bg-transparent text-white d-flex justify-content-between border-secondary px-0">
                                    <span>{{ grp.name }}</span>
                                    <form method="post" onsubmit="return confirm('Entfernen?');">
                                        <input type="hidden" name="remove_group" value="{{ grp.act }}">
                                        <button class="btn btn-link text-danger p-0"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}