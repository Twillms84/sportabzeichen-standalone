{% extends "base.html.twig" %}

{% block title %}{{ 'Prüfung bearbeiten'|trans }}{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-dark"><i class="fas fa-edit me-2 text-success"></i>{{ exam.name }}</h2>
            <a href="{{ path('app_exams_dashboard') }}" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i> {{ 'Zurück'|trans }}
            </a>
        </div>

        <div class="row">
            {# Stammdaten #}
            <div class="col-lg-5 mb-4">
                <div class="card osa-card">
                    <div class="osa-card-header">
                        <i class="fas fa-info-circle me-2"></i>{{ 'Stammdaten'|trans }}
                    </div>
                    <div class="card-body p-4">
                        <form method="post">
                            <div class="mb-3">
                                <label class="form-label fw-bold">{{ 'Bezeichnung'|trans }}</label>
                                <input type="text" name="exam_name" class="form-control" value="{{ exam.name }}">
                            </div>
                            <div class="row">
                                <div class="col-6 mb-3">
                                    <label class="form-label fw-bold">{{ 'Jahr'|trans }}</label>
                                    <input type="number" name="exam_year" class="form-control" value="{{ exam.year }}" required>
                                </div>
                                <div class="col-6 mb-3">
                                    <label class="form-label fw-bold">{{ 'Datum'|trans }}</label>
                                    <input type="date" name="exam_date" class="form-control" value="{{ exam.date }}">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-osa-primary w-100 shadow-sm mt-2">
                                <i class="fas fa-save me-2"></i>{{ 'Änderungen speichern'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            {# Gruppenverwaltung #}
            <div class="col-lg-7 mb-4">
                <div class="card osa-card">
                    <div class="osa-card-header" style="background-color: #2c5e32 !important;">
                        <i class="fas fa-users me-2"></i>{{ 'Gruppen verwalten'|trans }}
                    </div>
                    <div class="card-body p-4">
                        <h6 class="fw-bold mb-3">{{ 'Zugeordnete Gruppen'|trans }}</h6>
                        <div class="list-group mb-4" style="max-height: 200px; overflow-y: auto; border: 1px solid #eee;">
                            {% for grp in assigned_groups %}
                                <div class="list-group-item d-flex justify-content-between align-items-center border-start-0 border-end-0">
                                    <div>
                                        <span class="fw-bold text-success">{{ grp.name }}</span>
                                        <small class="text-muted d-block">{{ grp.act }}</small>
                                    </div>
                                    <form method="post" onsubmit="return confirm('Gruppe entfernen?');">
                                        <input type="hidden" name="remove_group" value="{{ grp.act }}">
                                        <button class="btn btn-sm btn-outline-danger border-0"><i class="fas fa-trash"></i></button>
                                    </form>
                                </div>
                            {% else %}
                                <div class="p-3 text-center text-muted">Keine Gruppen zugeordnet</div>
                            {% endfor %}
                        </div>

                        <hr>

                        <form method="post">
                            <label class="form-label fw-bold">{{ 'Neue Gruppen hinzufügen'|trans }}</label>
                            
                            <div class="dropdown mb-3">
                                {# Der Button, der wie ein Select-Feld aussieht #}
                                <button class="btn btn-outline-secondary w-100 text-start d-flex justify-content-between align-items-center dropdown-toggle" 
                                        type="button" 
                                        id="groupDropdown" 
                                        data-bs-toggle="dropdown" 
                                        data-bs-auto-close="outside" 
                                        aria-expanded="false"
                                        style="background-color: #2b3035; color: #fff; border-color: #495057;">
                                    <span>{{ 'Gruppen auswählen...'|trans }}</span>
                                </button>

                                {# Das Dropdown-Menü mit Checkboxen #}
                                <ul class="dropdown-menu dropdown-menu-dark-custom w-100 p-2" aria-labelledby="groupDropdown" style="max-height: 300px; overflow-y: auto;">
                                    {% for id, name in available_groups %}
                                        <li class="px-2 py-1">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="group_ids[]" value="{{ id }}" id="check_grp_{{ id }}">
                                                <label class="form-check-label w-100 cursor-pointer" for="check_grp_{{ id }}">
                                                    {{ name }}
                                                </label>
                                            </div>
                                        </li>
                                    {% else %}
                                        <li class="text-muted small p-2">Keine weiteren Gruppen verfügbar</li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <input type="hidden" name="add_groups" value="1">
                            <button type="submit" class="btn btn-osa-success w-100 py-2" {% if available_groups is empty %}disabled{% endif %}>
                                <i class="fas fa-plus-circle me-2"></i>{{ 'Ausgewählte Gruppen hinzufügen'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}