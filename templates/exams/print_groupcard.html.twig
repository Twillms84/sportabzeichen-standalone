<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Gruppenpr√ºfkarte - {{ exam.exam_name }}</title>
    
    {# Hier laden wir deine existierende CSS-Datei #}
    <link rel="stylesheet" href="{{ asset('styles/print_groupcard.css') }}">

    {# Kleines Inline-CSS NUR f√ºr den Druck-Button (damit der nicht in der Druck-CSS stehen muss) #}
    <style>
        .ui-controls {
            position: fixed;
            top: 10px;
            right: 10px;
            background: #fff;
            padding: 10px;
            border: 1px solid #ccc;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
            z-index: 9999;
            font-family: Arial, sans-serif;
        }
        @media print {
            .ui-controls { display: none !important; }
        }
    </style>
</head>
<body>

    <div class="ui-controls">
        <button onclick="window.print();" style="font-size: 16px; padding: 5px 15px; cursor: pointer; font-weight: bold;">
            üñ®Ô∏è Drucken
        </button>
        <div style="margin-top:5px; font-size: 12px; color: #555;">
            Format: A4 Querformat<br>
            R√§nder: Keine / Minimum
        </div>
    </div>

    {% for batch in batches %}
        <div class="sheet">
            
            {# 1. Hintergrundbild #}
            <img src="{{ asset('images/dsa_groupcard.svg') }}" class="bg-svg" alt="Hintergrund">

            <div class="data-layer">
                
                {# 2. Header-Informationen #}
                
                {# JAHR (Das CSS regelt das letter-spacing) #}
                <div class="header-year">
                    {{ exam_year_short|default('') }}
                </div>

                <div class="header-info">
                    {# Das X f√ºr den Schultyp #}
                    <div class="mark-institution-type">X</div>

                    {# Name der Schule #}
                    <div class="w-school">
                        {% if selectedClass %}Schule: {{ selectedClass }}{% endif %}
                    </div>
                    
                    {# Stadt #}
                    <div class="w-city">
                        {{ institutionCity|default('Bar√üel') }}
                    </div>
                </div>

                {# 3. Haupttabelle #}
                <div class="table-container">
                    <table>
                        {# Colgroup hilft dem Browser, die Spaltenbreiten aus dem CSS korrekt anzuwenden #}
                        <colgroup>
                            <col class="col-name">
                            <col class="col-gender">
                            <col class="col-birth">
                            {# 4 Disziplinen √† 3 Spalten #}
                            {% for i in 1..4 %}
                                <col class="col-dis-nr">
                                <col class="col-dis-res">
                                <col class="col-dis-pts">
                            {% endfor %}
                            <col class="col-swim">
                            <col class="col-sum">
                        </colgroup>
                        <tbody>
                            {% for p in batch %}
                                <tr>
                                    {% if p is not null %}
                                        {# --- ECHTE DATEN --- #}
                                        <td class="col-name">{{ p.lastname }}, {{ p.firstname }}</td>
                                        <td class="col-gender">{{ p.geschlecht_kurz }}</td>
                                        <td class="col-birth">{{ p.birthday_fmt }}</td>

                                        {% for i in 1..4 %}
                                            <td class="col-dis-nr">{{ p.disciplines[i].nr }}</td>
                                            <td class="col-dis-res">{{ p.disciplines[i].res }}</td>
                                            <td class="col-dis-pts">{{ p.disciplines[i].pts }}</td>
                                        {% endfor %}

                                        <td class="col-swim">
                                            {% if p.has_swimming %}{{ p.swimming_year }}{% endif %}
                                        </td>
                                        <td class="col-sum">{{ p.total_points }}</td>
                                    
                                    {% else %}
                                        {# --- LEERE ZEILE (Platzhalter) --- #}
                                        {# Wir nutzen &nbsp; damit die Zeile nicht kollabiert #}
                                        <td class="col-name">&nbsp;</td>
                                        <td class="col-gender">&nbsp;</td>
                                        <td class="col-birth">&nbsp;</td>
                                        {% for i in 1..4 %}
                                            <td class="col-dis-nr">&nbsp;</td>
                                            <td class="col-dis-res">&nbsp;</td>
                                            <td class="col-dis-pts">&nbsp;</td>
                                        {% endfor %}
                                        <td class="col-swim">&nbsp;</td>
                                        <td class="col-sum">&nbsp;</td>
                                    {% endif %}
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# 4. Footer (Pr√ºfer & Datum) #}
                <div class="footer-verifier">
                    {% if app.user %}
                        {{ app.user.firstname }} {{ app.user.lastname }}
                    {% endif %}
                    {% if userNumber is defined and userNumber %}
                        ({{ userNumber }})
                    {% endif %}
                </div>

                <div class="footer-date">
                    {{ today|date('d.m.Y') }}
                </div>

            </div>
        </div>
    {% endfor %}

</body>
</html>