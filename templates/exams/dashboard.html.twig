{% extends 'base.html.twig' %}

{% block title %}Sportabzeichen √úbersicht{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/dashboard_css.css') }}">
{% endblock %}

{% block body %}
    <div class="row mb-4">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <h1 class="h3 m-0">Sportabzeichen Dashboard</h1>
            <a href="{{ path('app_exams_new') }}" class="btn btn-primary">
                <span class="icon icon-plus"></span> Neue Pr√ºfung anlegen
            </a>
        </div>
    </div>

    {% if yearlyStats is empty %}
        <div class="alert alert-info">
            Noch keine Pr√ºfungen angelegt. Starten Sie mit "Neue Pr√ºfung anlegen".
        </div>
    {% else %}

        {% for year, data in yearlyStats %}
            <div class="panel panel-default mb-4">
                <div class="panel-heading exam-panel-heading">
                    <h3 class="panel-title exam-panel-title">
                        <span class="icon icon-calendar"></span> Jahrgang {{ year }}
                    </h3>
                    <span class="badge">{{ data.exams|length }} Termine</span>
                </div>
                
                <div class="panel-body">
                    <div class="row">
                        {# --- LINKS: LISTE --- #}
                        <div class="col-md-8">
                            <h5 class="text-muted text-uppercase font-weight-bold mb-3">Pr√ºfungstermine</h5>
                            <div class="list-group">
                                {% for exam in data.exams %}
                                    <div class="list-group-item clearfix list-item-flex">
                                        
                                        {# Name und Datum #}
                                        <div>
                                            <h4 class="list-group-item-heading mt-0 mb-1">
                                                <a href="{{ path('results_index', {id: exam.id}) }}" class="text-primary font-weight-bold">
                                                    {{ exam.exam_name }}
                                                </a>
                                            </h4>
                                            <p class="list-group-item-text text-muted small">
                                                <span class="icon icon-calendar"></span> 
                                                {{ exam.exam_date ? exam.exam_date|date('d.m.Y') : 'Kein Datum' }}
                                            </p>
                                        </div>

                                        {# Buttons Toolbar #}
                                        <div class="btn-toolbar-custom">
                                            <a href="{{ path('results_index', {id: exam.id}) }}" class="btn btn-sm btn-primary" title="Ergebnisse erfassen">
                                                <span class="icon icon-pencil"></span> Ergebnisse
                                            </a>
                                            <a href="{{ path('app_exams_stats', {id: exam.id}) }}" class="btn btn-sm btn-default" title="Detaillierte Statistik">
                                                <span class="icon icon-chart-bar"></span> Statistik
                                            </a>
                                            <a href="{{ path('app_exams_edit', {id: exam.id}) }}" class="btn btn-sm btn-default" title="Einstellungen bearbeiten">
                                                <span class="icon icon-cog"></span> √Ñndern
                                            </a>
                                            
                                            {# L√ñSCHEN BUTTON (Sauber f√ºr CSP & JS) #}
                                            <button type="button" 
                                                    class="btn btn-sm btn-danger btn-delete-exam" 
                                                    data-name="{{ exam.exam_name }}"
                                                    data-form-id="form-del-{{ exam.id }}"
                                                    title="Pr√ºfung l√∂schen">
                                                <span class="icon icon-trash"></span> L√∂schen
                                            </button>

                                            {# Verstecktes Formular f√ºr CSRF-Schutz #}
                                            <form id="form-del-{{ exam.id }}" 
                                                  action="{{ path('app_exams_delete', {id: exam.id}) }}" 
                                                  method="post" 
                                                  style="display:none;">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exam.id) }}">
                                            </form>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>

                        {# --- RECHTS: STATISTIK BALKEN --- #}
                        <div class="col-md-4 border-left">
                            <h5 class="text-center text-muted mb-4">Medaillenspiegel {{ year }}</h5>
                            
                            {% set total_participants = data.unique_users|length %}
                            
                            {% if total_participants > 0 %}
                                {# Berechnungen #}
                                {% set p_gold = (data.stats.Gold / total_participants * 100) %}
                                {% set p_silver = (data.stats.Silber / total_participants * 100) %}
                                {% set p_bronze = (data.stats.Bronze / total_participants * 100) %}
                                {% set count_none = total_participants - data.stats.Total %}
                                {% set p_none = (count_none / total_participants * 100) %}

                                {# Balken Diagramm #}
                                <div class="progress medal-progress">
                                    {% if data.stats.Gold > 0 %}
                                        <div class="progress-bar bg-gold" style="width: {{ p_gold }}%" title="Gold: {{ data.stats.Gold }}">
                                            {{ data.stats.Gold }}
                                        </div>
                                    {% endif %}
                                    {% if data.stats.Silber > 0 %}
                                        <div class="progress-bar bg-silver" style="width: {{ p_silver }}%" title="Silber: {{ data.stats.Silber }}">
                                            {{ data.stats.Silber }}
                                        </div>
                                    {% endif %}
                                    {% if data.stats.Bronze > 0 %}
                                        <div class="progress-bar bg-bronze" style="width: {{ p_bronze }}%" title="Bronze: {{ data.stats.Bronze }}">
                                            {{ data.stats.Bronze }}
                                        </div>
                                    {% endif %}
                                    {% if count_none > 0 %}
                                        <div class="progress-bar bg-none" style="width: {{ p_none }}%" title="Ohne Medaille: {{ count_none }}">
                                            {{ count_none }}
                                        </div>
                                    {% endif %}
                                </div>

                                {# Legende #}
                                <div class="mt-3 small">
                                    <ul class="list-unstyled">
                                        <li><span class="badge bg-gold">&nbsp;</span> Gold: <strong>{{ data.stats.Gold }}</strong></li>
                                        <li><span class="badge bg-silver">&nbsp;</span> Silber: <strong>{{ data.stats.Silber }}</strong></li>
                                        <li><span class="badge bg-bronze">&nbsp;</span> Bronze: <strong>{{ data.stats.Bronze }}</strong></li>
                                        <li><span class="badge bg-none" style="border: 1px solid #ccc">&nbsp;</span> Ohne: <strong>{{ count_none }}</strong></li>
                                        <li class="mt-2 border-top pt-2">
                                            <strong>Gesamt: {{ total_participants }} Teilnehmer</strong>
                                        </li>
                                    </ul>
                                </div>

                                <div class="text-center mt-3 text-success font-weight-bold">
                                    Erfolgsquote: {{ ((data.stats.Total / total_participants) * 100)|round(1) }}%
                                </div>

                            {% else %}
                                <div class="alert alert-warning text-center">
                                    Noch keine Teilnehmerdaten.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

    {% endif %}

<script>
        document.addEventListener('DOMContentLoaded', function() {
            // Test-Ausgabe: Muss in der Konsole erscheinen!
            console.log('‚úÖ INLINE-JS geladen!'); 

            const deleteButtons = document.querySelectorAll('.btn-delete-exam');
            
            if (deleteButtons.length === 0) {
                console.error('‚ùå Keine L√∂schen-Buttons gefunden!');
            }

            deleteButtons.forEach(function(button) {
                button.addEventListener('click', function(event) {
                    event.preventDefault(); // Stoppt den Link/Button

                    const examName = this.getAttribute('data-name');
                    const formId = this.getAttribute('data-form-id');

                    console.log('üóë L√∂schen geklickt f√ºr:', examName);

                    if (confirm('ACHTUNG: M√∂chten Sie die Pr√ºfung "' + examName + '" wirklich l√∂schen?')) {
                        const form = document.getElementById(formId);
                        if (form) {
                            form.submit();
                        } else {
                            alert('Fehler: Das versteckte L√∂sch-Formular wurde nicht gefunden (ID: ' + formId + ')');
                        }
                    }
                });
            });
        });
    </script>
    
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/exam_dashboard.js') }}"></script>
{% endblock %}