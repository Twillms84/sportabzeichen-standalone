<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportabzeichen App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
    <style>
        :root {
            --osa-main-green: #144018; /* Dein Sidebar-Gr√ºn */
            --osa-bg-light: #f8f9fa;
            --osa-focus-green: rgba(20, 64, 24, 0.25);
        }

        body { background-color: var(--osa-bg-light); font-family: 'Segoe UI', Roboto, sans-serif; }

        /* Sidebar Styling */
        .sidebar-wrapper { background-color: #1a1d20 !important; min-width: 250px; }
        .sidebar-brand { background-color: rgba(0,0,0,0.2); font-size: 1.2rem; }
        .nav-link:hover { background-color: rgba(255,255,255,0.1); }
        .nav-link.active { background-color: var(--osa-main-green) !important; font-weight: 600; }

        /* OSA Komponenten */
        .osa-card { border: none; border-radius: 12px; box-shadow: 0 4px 15px rgba(0,0,0,0.05); overflow: hidden; margin-bottom: 1.5rem; }
        .osa-card-header { background-color: var(--osa-main-green) !important; color: #fff; font-weight: 600; padding: 12px 20px; border: none; }
        
        /* Formulare & Selects */
        .form-control:focus, .form-select:focus {
            border-color: var(--osa-main-green);
            box-shadow: 0 0 0 0.25rem var(--osa-focus-green);
        }
        
        .osa-select-multiple {
            border-radius: 8px;
            padding: 8px;
            min-height: 150px;
        }
        .osa-select-multiple option { padding: 8px 12px; border-radius: 4px; margin-bottom: 2px; }
        .osa-select-multiple option:checked {
            background: var(--osa-main-green) linear-gradient(0deg, var(--osa-main-green) 0%, var(--osa-main-green) 100%) !important;
            color: white !important;
        }

        /* Buttons */
        .btn-osa-primary { background-color: var(--osa-main-green); color: white; border: none; transition: all 0.2s; }
        .btn-osa-primary:hover { background-color: #0e2e11; color: white; transform: translateY(-1px); }
        
        /* Layout Fixes */
        .main-content { background-color: var(--osa-bg-light); min-height: 100vh; }
    </style>
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    {% endblock %}
</head>
<body>
    {% block layout %}
        <div class="d-flex">
            {# SIDEBAR #}
            <div class="offcanvas-lg offcanvas-start sidebar-wrapper bg-dark" tabindex="-1" id="sidebarMenu">
                <div class="sidebar d-flex flex-column h-100 min-vh-100">
                    <a href="{{ path('app_exams_dashboard') }}" class="sidebar-brand text-decoration-none text-white p-3 d-block">
                         <i class="fas fa-medal me-2 text-warning"></i> <strong>Sportabzeichen</strong>
                    </a>
                    <hr class="my-0 border-secondary">
                    <ul class="nav flex-column mb-auto mt-3 px-2">
                        <li class="nav-item mb-1">
                            {% set is_exam = app.request.attributes.get('_route') starts with 'app_exams_' %}
                            <a href="{{ path('app_exams_dashboard') }}" class="nav-link text-white {% if is_exam %}active{% endif %} rounded">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                        </li>
                    </ul>
                    
                    <div class="mt-auto p-3 border-top border-secondary bg-black bg-opacity-25">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center overflow-hidden">
                                <i class="fas fa-user-circle fs-4 text-secondary me-2"></i>
                                <div class="lh-1 text-truncate">
                                    <span class="text-white fw-bold small">{{ app.user ? app.user.username : 'Gast' }}</span>
                                </div>
                            </div>
                            <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger border-0"><i class="fas fa-sign-out-alt"></i></a>
                        </div>
                    </div>
                </div>
            </div>

            {# CONTENT AREA #}
            <main class="main-content flex-grow-1 p-4">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </main>
        </div>
    {% endblock %}
</body>
</html>