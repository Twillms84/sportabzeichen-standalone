<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportabzeichen App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {# --- CSS --- #}
    {# Bootstrap 5 CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    {# Bootstrap-Select CSS #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css">
    
    {# FontAwesome #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {# WICHTIG: Deine eigenen Styles und JS Logik #}
    {% block stylesheets %}{% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>

    {# --- MOBILE HEADER --- #}
    <nav class="navbar navbar-dark bg-dark mobile-header px-3 d-lg-none sticky-top">
        <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
            <i class="fas fa-bars"></i> Menü
        </button>
        <span class="navbar-brand ms-2">Sportabzeichen</span>
    </nav>

    {# --- SIDEBAR WRAPPER --- #}
    <div class="offcanvas-lg offcanvas-start sidebar-wrapper bg-dark" tabindex="-1" id="sidebarMenu">
        
        <div class="offcanvas-header d-lg-none border-bottom border-secondary">
            <h5 class="offcanvas-title text-white">Menü</h5>
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu" aria-label="Close"></button>
        </div>

        <div class="sidebar d-flex flex-column h-100">
            
            <a href="{{ path('app_exams_dashboard') }}" class="sidebar-brand">
                 <i class="fas fa-medal me-2"></i> Sportabzeichen
            </a>

            <hr class="my-0" style="border-top: 1px solid rgba(255,255,255,0.15);">

            <ul class="nav flex-column mb-auto mt-3">
                <li class="nav-item">
                    {% set is_exam = app.request.attributes.get('_route') starts with 'app_exams_' %}
                    <a href="{{ path('app_exams_dashboard') }}" 
                    class="nav-link {% if is_exam %}active{% endif %}">
                        <i class="fas fa-tachometer-alt"></i> Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    {% set is_admin = app.request.attributes.get('_route') starts with 'admin_' %}
                    <a href="{{ path('admin_dashboard') }}" 
                    class="nav-link {% if is_admin %}active{% endif %}">
                        <i class="fas fa-tools"></i> Verwaltung
                    </a>
                </li>
            </ul>
            
            {# --- FOOTER BEREICH MIT LOGOUT --- #}
            <div class="mt-auto p-3 text-white-50 small border-top border-secondary">
                <div class="d-flex align-items-center justify-content-between">
                    
                    {# User Info (Links) #}
                    <div class="d-flex align-items-center overflow-hidden">
                        <i class="fas fa-user-circle fs-4 me-2"></i>
                        <div class="lh-1 text-truncate">
                            <span class="d-block text-white">Angemeldet</span>
                            {# Zeigt Vorname an, oder Username als Fallback #}
                            <small title="{{ app.user.userIdentifier|default('') }}">
                                {{ app.user.firstname|default(app.user.username|default('Benutzer')) }}
                            </small>
                        </div>
                    </div>

                    {# Logout Button (Rechts) #}
                    <a href="{{ path('app_logout') }}" class="btn btn-link text-danger p-0 ms-2" title="Abmelden">
                        <i class="fas fa-sign-out-alt fs-5"></i>
                    </a>

                </div>
            </div>

        </div>
    </div>

    {# --- HAUPTINHALT --- #}
    <main class="main-content p-4">
        {% block body %}{% endblock %}
    </main>

</body>
</html>