<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Sportabzeichen App{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        {# 1. jQuery (MUSS als allererstes geladen werden für das Plugin) #}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

        {# 2. Bootstrap 5 CSS #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        
        {# 3. Bootstrap-Select CSS (Für das Aussehen der Dropdowns) #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css">

        {# FontAwesome Icons #}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

        <style>
            body {
                min-height: 100vh;
                overflow-x: hidden;
            }

            /* --- SIDEBAR STYLING (IServ-Style) --- */
            .sidebar {
                background-color: #2c3e50;
                color: #ecf0f1;
                min-height: 100vh;
            }

            .sidebar .nav-link {
                color: #bdc3c7;
                padding: 12px 20px;
                font-size: 1.05rem;
                border-left: 4px solid transparent;
            }

            .sidebar .nav-link:hover, .sidebar .nav-link.active {
                color: #fff;
                background-color: #34495e;
                border-left-color: #3498db;
            }

            .sidebar .nav-link i {
                width: 25px;
                text-align: center;
                margin-right: 10px;
            }

            .sidebar-brand {
                padding: 20px;
                font-size: 1.3rem;
                font-weight: bold;
                color: white;
                background-color: #1a252f;
                text-decoration: none;
                display: block;
            }

            /* --- DESKTOP VS MOBILE LAYOUT --- */
            .sidebar-wrapper { display: none; }

            @media (min-width: 992px) {
                .sidebar-wrapper {
                    display: block;
                    position: fixed;
                    top: 0; left: 0; bottom: 0;
                    width: 260px;
                    z-index: 100;
                    overflow-y: auto;
                }
                .main-content { margin-left: 260px; }
                .mobile-header { display: none !important; }
            }
        </style>

    {% block stylesheets %}
        {{ importmap('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
    
    </head>
    <body>

        <nav class="navbar navbar-dark bg-dark mobile-header px-3 d-lg-none">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                <i class="fas fa-bars"></i> Menü
            </button>
            <span class="navbar-brand ms-2">Sportabzeichen</span>
        </nav>

        <div class="offcanvas-lg offcanvas-start sidebar-wrapper bg-dark" tabindex="-1" id="sidebarMenu">
             {# ... Dein Sidebar Code (unverändert) ... #}
             <div class="offcanvas-header d-lg-none">
                <h5 class="offcanvas-title text-white">Menü</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu"></button>
            </div>

            <div class="sidebar d-flex flex-column">
                <a href="{{ path('app_exams_dashboard') }}" class="sidebar-brand">
                    <i class="fas fa-medal me-2"></i> Sportabzeichen
                </a>

                <ul class="nav flex-column mb-auto mt-2">
                    <li class="nav-item">
                        <a href="{{ path('app_exams_dashboard') }}" class="nav-link {% if app.request.get('_route') == 'app_exams_dashboard' %}active{% endif %}">
                            <i class="fas fa-home"></i> Übersicht
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i class="fas fa-chart-bar"></i> Statistiken
                        </a>
                    </li>
                    
                    {% if is_granted('ROLE_ADMIN') %}
                        <hr class="text-secondary mx-3">
                        <div class="px-3 text-uppercase text-muted small mb-1">Verwaltung</div>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('admin_dashboard') }}">
                                <i class="fas fa-fw fa-tools"></i> <span>Admin</span>
                            </a>
                        </li>   
                    {% endif %}
                </ul>

                <div class="p-3 border-top border-secondary">
                    {% if app.user %}
                        <div class="d-flex align-items-center text-white mb-2">
                            <div class="flex-shrink-0"><i class="fas fa-user-circle fa-2x"></i></div>
                            <div class="flex-grow-1 ms-3">{{ app.user.firstname|default('Benutzer') }}</div>
                        </div>
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm w-100">
                            <i class="fas fa-sign-out-alt"></i> Abmelden
                        </a>
                    {% else %}
                         <a href="#" class="btn btn-primary w-100">Login</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <main class="main-content p-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show shadow-sm">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        {# Bootstrap JS Bundle #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        {# 4. Bootstrap-Select JS (Muss NACH Bootstrap JS kommen) #}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>
        
        {# 5. Initialisierungsskript (Optional hier, oder in der Unterseite) #}
    </body>
</html>