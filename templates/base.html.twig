<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportabzeichen App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {# --- CSS --- #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>

    {# --- LAYOUT BLOCK START --- #}
    {# Dieser Block enthält das Standard-Layout (Sidebar + Content). #}
    {# Auf der Login-Seite überschreiben wir diesen Block, um die Sidebar auszublenden. #}
    {% block layout %}

        {# 1. MOBILE HEADER (Nur sichtbar auf kleinen Screens) #}
        <nav class="navbar navbar-dark bg-dark mobile-header px-3 d-lg-none sticky-top">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                <i class="fas fa-bars"></i> Menü
            </button>
            <span class="navbar-brand ms-2">Sportabzeichen</span>
        </nav>

        {# 2. SIDEBAR CONTAINER #}
        <div class="offcanvas-lg offcanvas-start sidebar-wrapper bg-dark" tabindex="-1" id="sidebarMenu">
            
            {# Mobile: Schließen-Button #}
            <div class="offcanvas-header d-lg-none border-bottom border-secondary">
                <h5 class="offcanvas-title text-white">Menü</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu" aria-label="Close"></button>
            </div>

            {# Sidebar Inhalt #}
            <div class="sidebar d-flex flex-column h-100">
                
                {# Logo / Brand #}
                <a href="{{ path('app_exams_dashboard') }}" class="sidebar-brand text-decoration-none text-white p-3 d-block">
                     <i class="fas fa-medal me-2 text-warning"></i> <strong>Sportabzeichen</strong>
                </a>

                <hr class="my-0 border-secondary">

                {# Navigation Links #}
                <ul class="nav flex-column mb-auto mt-3 px-2">
                    <li class="nav-item mb-1">
                        {% set is_exam = app.request.attributes.get('_route') starts with 'app_exams_' %}
                        <a href="{{ path('app_exams_dashboard') }}" 
                           class="nav-link text-white {% if is_exam %}active bg-primary{% endif %} rounded">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    
                    {# Nur anzeigen, wenn User ADMIN Rechte hat (optional) #}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item mb-1">
                        {% set is_admin = app.request.attributes.get('_route') starts with 'admin_' %}
                        {# Hinweis: Pfad muss existieren, sonst Fehler. Ggf. anpassen #}
                        <a href="{{ path('admin_dashboard') }}" class="nav-link text-white opacity-75 {% if is_admin %}active bg-primary{% endif %} rounded">
                            <i class="fas fa-tools me-2"></i> Verwaltung
                        </a>
                    </li>
                    {% endif %}
                </ul>
                
                {# Footer: User Info & Logout #}
                <div class="mt-auto p-3 border-top border-secondary bg-black bg-opacity-25">
                    <div class="d-flex align-items-center justify-content-between">
                        
                        {# Linke Seite: User Name #}
                        <div class="d-flex align-items-center overflow-hidden">
                            <i class="fas fa-user-circle fs-4 text-secondary me-2"></i>
                            <div class="lh-1 text-truncate" style="max-width: 130px;">
                                <span class="d-block text-white-50 small" style="font-size: 0.75rem;">Angemeldet als</span>
                                <span class="text-white fw-bold small text-truncate d-block">
                                    {{ app.user ? (app.user.firstname|default(app.user.username)) : 'Gast' }}
                                </span>
                            </div>
                        </div>

                        {# Rechte Seite: Logout Button #}
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger border-0" title="Abmelden">
                            <i class="fas fa-sign-out-alt fs-5"></i>
                        </a>

                    </div>
                </div>

            </div>
        </div>

        {# 3. MAIN CONTENT #}
        {# Der Inhalt schiebt sich neben die Sidebar #}
        <main class="main-content p-4">
            {# Flash Messages (Erfolgs-/Fehlermeldungen) #}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {# Hier kommt der eigentliche Seiteninhalt rein #}
            {% block body %}{% endblock %}
        </main>

    {% endblock %} 
    {# --- LAYOUT BLOCK ENDE --- #}

</body>
</html>