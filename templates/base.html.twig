<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportabzeichen App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
    <style>
        :root {
            --osa-main-green: #144018;
            --osa-bg-dark: #121212;
            --osa-sidebar-dark: #1a1d21;
            --osa-card-dark: #212529;
            --osa-text-light: #e9ecef;
        }

        body { 
            background-color: var(--osa-bg-dark); 
            color: var(--osa-text-light);
            margin: 0;
            overflow-x: hidden;
        }

        /* Layout-Struktur: Sidebar fest, Main scrollbar */
        .wrapper { display: flex; min-height: 100vh; width: 100vw; }
        
        .sidebar-wrapper { 
            width: 250px; 
            background-color: var(--osa-sidebar-dark); 
            border-right: 1px solid #333;
            flex-shrink: 0;
            z-index: 1000;
        }

        .main-content { 
            flex-grow: 1; 
            padding: 2rem; 
            background-color: var(--osa-bg-dark);
        }

        /* Sidebar Navigation */
        .nav-link { color: #adb5bd; transition: all 0.2s; margin-bottom: 4px; }
        .nav-link:hover { color: #fff; background-color: rgba(255,255,255,0.05); }
        .nav-link.active { background-color: var(--osa-main-green) !important; color: #fff !important; }

        /* Cards im Dark-Design */
        .osa-card { 
            background-color: var(--osa-card-dark); 
            border: 1px solid #383d42; 
            border-radius: 12px; 
            overflow: hidden; 
            box-shadow: 0 10px 20px rgba(0,0,0,0.2);
        }
        .osa-card-header { 
            background-color: var(--osa-main-green); 
            color: #fff; 
            padding: 1rem 1.25rem; 
            font-weight: 600; 
            border: none;
        }

        /* Formulare */
        .form-control, .form-select {
            background-color: #2b3035;
            border: 1px solid #495057;
            color: #fff;
        }
        .form-control:focus, .form-select:focus {
            background-color: #32383e;
            color: #fff;
            border-color: var(--osa-main-green);
            box-shadow: 0 0 0 0.25rem rgba(20, 64, 24, 0.5);
        }

        /* Das "Drop-Down" Multiple Select (Bootstrap-Select Support) */
        .bootstrap-select .btn {
            background-color: #2b3035 !important;
            color: #fff !important;
            border: 1px solid #495057 !important;
        }
        .dropdown-menu { background-color: #2b3035; border: 1px solid #495057; }
        .dropdown-item { color: #eee; }
        .dropdown-item:hover { background-color: var(--osa-main-green); color: #fff; }

        /* Buttons */
        .btn-osa-primary { background-color: var(--osa-main-green); color: white; border: none; }
        .btn-osa-primary:hover { background-color: #0e2e11; color: white; }

        @media (max-width: 991px) {
            .sidebar-wrapper { display: none; } /* Mobile über Offcanvas lösen */
        }
    </style>
    {% endblock %}

    {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/js/bootstrap-select.min.js"></script>
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>
    <div class="wrapper">
        {# --- SIDEBAR --- #}
        <aside class="sidebar-wrapper d-none d-lg-flex flex-column">
            <div class="p-3">
                <a href="{{ path('app_exams_dashboard') }}" class="text-white text-decoration-none fs-4 fw-bold">
                    <i class="fas fa-medal me-2 text-warning"></i> Sportabzeichen
                </a>
            </div>
            <hr class="mx-3 border-secondary">
            
            <ul class="nav nav-pills flex-column px-3 mt-2 mb-auto">
                <li class="nav-item">
                    {% set is_exam = app.request.attributes.get('_route') starts with 'app_exams_' %}
                    <a href="{{ path('app_exams_dashboard') }}" class="nav-link {% if is_exam %}active{% endif %}">
                        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                    </a>
                </li>
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a href="{{ path('admin_dashboard') }}" class="nav-link">
                        <i class="fas fa-tools me-2"></i> Verwaltung
                    </a>
                </li>
                {% endif %}
            </ul>

            <div class="p-3 border-top border-secondary mt-auto bg-black bg-opacity-25">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="text-truncate me-2">
                        <small class="d-block text-muted">User</small>
                        <span class="fw-bold small">{{ app.user ? app.user.username : 'Gast' }}</span>
                    </div>
                    <a href="{{ path('app_logout') }}" class="text-danger" title="Abmelden">
                        <i class="fas fa-sign-out-alt fs-5"></i>
                    </a>
                </div>
            </div>
        </aside>

        {# --- MAIN --- #}
        <main class="main-content">
            {% block body %}{% endblock %}
        </main>
    </div>

    <script>
        $(document).ready(function() {
            // Initialisiert das Multiple-Select Dropdown für alle mit der Klasse .selectpicker
            $('.selectpicker').selectpicker();
        });
    </script>
</body>
</html>