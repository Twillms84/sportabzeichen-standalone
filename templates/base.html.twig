<!DOCTYPE html>
<html lang="de" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportabzeichen App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {# 1. LIBRARIES (CDN) #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.14.0-beta2/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {# 2. THEME-SCRIPT (Muss im Head bleiben gegen Flackern) #}
    <script>
        (function() {
            const userTheme = "{{ app.user ? app.user.theme : 'light' }}";
            if (userTheme === 'auto' || !userTheme) {
                const theme = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
                document.documentElement.setAttribute('data-bs-theme', theme);
            } else {
                document.documentElement.setAttribute('data-bs-theme', userTheme);
            }
        })();
    </script>

    {% block stylesheets %}
        {# Hier wird jetzt deine aufgeräumte app.css geladen #}
        {{ importmap('app') }}
    {% endblock %}

    {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        
        {{ importmap('app') }}

        <script>
            document.addEventListener('DOMContentLoaded', function () {
                var toastElList = [].slice.call(document.querySelectorAll('.toast'));
                var toastList = toastElList.map(function (toastEl) {
                    var toast = new bootstrap.Toast(toastEl);
                    toast.show();
                    // Entfernt das Element aus dem DOM nach dem Ausblenden
                    toastEl.addEventListener('hidden.bs.toast', function () { toastEl.remove(); });
                    return toast;
                });
            });
        </script>
    {% endblock %}
</head>
<body>

    {# --- TOAST CONTAINER (Overlay) --- #}
    <div class="toast-container position-fixed top-0 end-0 p-3">
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {# Farbzuordnung basierend auf Label #}
                {% set text_color = (label == 'success' ? 'text-success' : (label in ['danger', 'error'] ? 'text-danger' : 'text-warning')) %}
                
                <div class="toast custom-toast hide {{ text_color }}" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="5000">
                    <div class="toast-header border-0 bg-transparent {{ text_color }}">
                        <i class="fas {{ label == 'success' ? 'fa-check-circle' : 'fa-exclamation-triangle' }} me-2"></i>
                        <strong class="me-auto">System-Hinweis</strong>
                        <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body pt-0">
                        {{ message }}
                    </div>
                    <div class="toast-progress">
                        <div class="toast-progress-fill" style="animation-duration: 5000ms;"></div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>

    {% block layout %}
        {# Mobile Header #}
        <nav class="navbar navbar-dark bg-dark mobile-header px-3 d-lg-none sticky-top border-bottom border-secondary">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                <i class="fas fa-bars"></i> Menü
            </button>
            <span class="navbar-brand ms-2">Sportabzeichen</span>
        </nav>

        {# Sidebar Wrapper #}
        <div class="offcanvas-lg offcanvas-start sidebar-wrapper d-flex flex-column" tabindex="-1" id="sidebarMenu">
            <div class="offcanvas-header d-lg-none border-bottom border-secondary">
                <h5 class="offcanvas-title text-white">Menü</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu"></button>
            </div>

            <div class="sidebar d-flex flex-column flex-grow-1 overflow-hidden">
                <a href="{{ path('app_exams_dashboard') }}" class="sidebar-brand text-decoration-none">
                     <i class="fas fa-medal me-2 text-warning"></i> <strong>Sportabzeichen</strong>
                </a>
                <hr class="my-0 border-secondary">
                
                <ul class="nav flex-column mb-auto mt-3 px-2">
                    <li class="nav-item mb-1">
                        {% set is_exam = app.request.attributes.get('_route') starts with 'app_exams_' %}
                        <a href="{{ path('app_exams_dashboard') }}" class="nav-link {% if is_exam %}active{% endif %}">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item mb-1">
                        {% set is_admin = app.request.attributes.get('_route') starts with 'admin_' %}
                        <a href="{{ path('admin_exam_overview') }}" class="nav-link {% if is_admin %}active{% endif %}">
                            <i class="fas fa-tools"></i> Verwaltung
                        </a>
                    </li>
                    {% endif %}
                </ul>

                <div class="mt-auto p-3 border-top border-secondary bg-black bg-opacity-25">
                    {% if app.user %}
                        <div class="dropup">
                            <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fs-4 me-2"></i>
                                <strong>{{ app.user.firstname|default(app.user.username) }}</strong>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark shadow" aria-labelledby="dropdownUser">
                                <li><a class="dropdown-item" href="{{ path('profile_index') }}"><i class="fas fa-id-card"></i> Mein Konto</a></li>
                                <li><a class="dropdown-item" href="{{ path('profile_settings') }}"><i class="fas fa-sliders-h"></i> Einstellungen</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item text-danger" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Abmelden</a></li>
                            </ul>
                        </div>
                    {% else %}
                         <div class="d-flex align-items-center justify-content-between text-white">
                            <span class="small ms-2">Gast</span>
                            <a href="{{ path('app_login') }}" class="btn btn-sm btn-outline-light border-0">
                                <i class="fas fa-sign-in-alt fs-5"></i>
                            </a>
                        </div>
                    {% endif %}
                </div> 
            </div>
        </div>

        {# Main Content #}
        <main class="main-content">
            <div class="container-fluid p-4">
                {% block body %}{% endblock %}
            </div>
        </main>
    {% endblock %} 
</body>
</html>