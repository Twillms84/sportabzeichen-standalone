<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Sportabzeichen App{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    {# --- CSS --- #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
    <style>
        /* GLOBALER DARK MODE LOOK */
        body { background-color: #121212; color: #e9ecef; }
        
        /* SIDEBAR FIX FÜR DESKTOP */
        @media (min-width: 992px) {
            body { display: flex; }
            .sidebar-wrapper { width: 280px; height: 100vh; position: sticky; top: 0; flex-shrink: 0; }
            .main-content { flex-grow: 1; }
        }

        /* VORLAGE: DROP-DOWN STIL (Wie in Results) */
        .dropdown-menu-dark-custom {
            background-color: #2b3035;
            border: 1px solid #495057;
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        }
        .dropdown-menu-dark-custom .dropdown-item { color: #eee; }
        .dropdown-menu-dark-custom .dropdown-item:hover { background-color: #144018; color: #fff; }
        
        /* Hover-Effekt für die Sidebar Links */
        .nav-link:hover { background-color: rgba(255,255,255,0.1); }
    </style>
    {% endblock %}

    {% block javascripts %}
        {# Bootstrap 5 braucht nur das Bundle für Dropdowns (enthält Popper) #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {{ importmap('app') }}
    {% endblock %}
</head>
<body>

    {% block layout %}
        {# 1. MOBILE HEADER #}
        <nav class="navbar navbar-dark bg-dark mobile-header px-3 d-lg-none sticky-top w-100">
            <button class="btn btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu">
                <i class="fas fa-bars"></i>
            </button>
            <span class="navbar-brand ms-2">Sportabzeichen</span>
        </nav>

        {# 2. SIDEBAR CONTAINER #}
        <div class="offcanvas-lg offcanvas-start sidebar-wrapper bg-dark" tabindex="-1" id="sidebarMenu">
            <div class="offcanvas-header d-lg-none border-bottom border-secondary">
                <h5 class="offcanvas-title text-white">Menü</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" data-bs-target="#sidebarMenu"></button>
            </div>

            <div class="sidebar d-flex flex-column h-100">
                <a href="{{ path('app_exams_dashboard') }}" class="sidebar-brand text-decoration-none text-white p-3 d-block">
                     <i class="fas fa-medal me-2 text-warning"></i> <strong>Sportabzeichen</strong>
                </a>
                <hr class="my-0 border-secondary">

                <ul class="nav flex-column mb-auto mt-3 px-2">
                    <li class="nav-item mb-1">
                        {% set is_exam = app.request.attributes.get('_route') starts with 'app_exams_' %}
                        <a href="{{ path('app_exams_dashboard') }}" 
                           class="nav-link text-white {% if is_exam %}active bg-primary{% endif %} rounded">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item mb-1">
                        <a href="{{ path('admin_dashboard') }}" class="nav-link text-white opacity-75 rounded">
                            <i class="fas fa-tools me-2"></i> Verwaltung
                        </a>
                    </li>
                    {% endif %}
                </ul>
                
                <div class="mt-auto p-3 border-top border-secondary bg-black bg-opacity-25">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center overflow-hidden">
                            <i class="fas fa-user-circle fs-4 text-secondary me-2"></i>
                            <div class="lh-1 text-truncate" style="max-width: 130px;">
                                <span class="d-block text-white-50 small" style="font-size: 0.75rem;">Angemeldet als</span>
                                <span class="text-white fw-bold small text-truncate d-block">
                                    {{ app.user ? (app.user.firstname|default(app.user.username)) : 'Gast' }}
                                </span>
                            </div>
                        </div>
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger border-0" title="Abmelden">
                            <i class="fas fa-sign-out-alt fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        {# 3. MAIN CONTENT #}
        <main class="main-content p-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </main>
    {% endblock %} 

</body>
</html>